.game_form_popup
  background bglight

.game_form
  padding-top 10px
  fieldset
    padding 0px 20px
  button[type=submit]
    width 100%
    height 45px
    border-radius 0 0 5px 5px
    margin 30px 0 0
    background gold
    color #FFF
    font-size 0.85em
    text-transform uppercase
    &:before
      margin-right 10px
    &.active
      background lighten(gold, 10%)

#new_game_form
  .nice-radio
    input.radio.computer:empty + label
      border-radius 0 25px 25px 0
    input.radio.human:empty + label
      border-radius 30px 0 0 30px
    input.radio.human:empty + label:after
      left auto
      right 0
  .check_container
    margin-top 15px

.rating_range
  margin-top 10px
  .select_input
    margin-top 5px
    select
      padding-left 60px

.setupPosition
  display flex
  justify-content center
  margin-top 10px

.setupMiniBoardWrapper
  width 100px
  height 100px
