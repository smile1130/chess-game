.game_form_popup
  width 85%
  left 7.5%

.game_form
  padding-top 10px
  fieldset
    padding 0px 20px
  button[type=submit]
    margin 20px 0 10px
    background #C4A86F
    color #FFF

#new_game_form
  .nice-radio
    input.radio.computer:empty + label
      text-align right
      border-radius 0 25px 25px 0
    input.radio.human:empty + label
      border-radius 30px 0 0 30px
    input.radio.human:empty + label:after
      left auto
      right 0

.rating_range
  font-size 14px
  margin-top 10px
  .select_input
    margin-top 5px
    select
      padding-left 60px


