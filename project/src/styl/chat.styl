#chat
  color #353535

.chat_content
  background #F5F5F5
  height 100%
  padding-top 45px

.chat_scroller
  overflow hidden

.chat_messages
  padding 10px

.chat_msg
  font-weight normal
  padding 20px
  background #fff
  font-family 'montserratlight'
  margin-top 20px
  border-radius 8px
  font-size 14px
  line-height 24px
  box-shadow 0px 2px 4px 0px rgba(0,0,0,0.10)
  color #767676
  &:before
    content ''
    display block
    position absolute
    left 5px
    height 10px
    width 10px
    -ms-transform: rotate(45deg); /* IE 9 */
    -webkit-transform: rotate(45deg); /* Chrome, Safari, Opera */
    transform: rotate(45deg);
    background #fff
  &.system
    text-align right
    font-style italic
    font-size 0.8em
    border-bottom none
  &:last-child
    border-bottom none

.chat_user
  font-family 'montserratbold'
  margin-right 15px

.chat_form
  position relative
  width 100%

.chat_input
  display block
  width 100%
  height 100%
  padding 15px
  font-size 1em
  border none
  font-family 'montserratregular'
  color #C3C3C3
  font-size 14px
  
.chat_send
  position absolute
  top 0
  right 0
  padding 0 10px
  width 50px
  height 100%
  background transparent
  font-size 1em
  color #C3A86F
