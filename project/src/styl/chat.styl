#chat
  color #353535

.chat_scroller
  overflow hidden

.chat_messages
  padding 10px

.chat_msg
  font-weight normal
  padding 15px
  background #fff
  margin-top 20px
  border-top-left-radius: 8px
  border-top-right-radius: 8px
  font-size 1em
  line-height 1.2em
  color #767676
  width 90%
  &:before
    content ''
    display block
    position absolute
    left 5px
    height 10px
    width 10px
    transform: rotate(45deg);
    background #fff
  &:first-child
    margin-top 0
  &:last-child
    border-bottom-left-radius: 8px
    border-bottom-right-radius: 8px
  &.close_balloon
    border-bottom-left-radius: 8px
    border-bottom-right-radius: 8px
  &.player
    background #c4a86f
    color #fff
    margin-left 10%
    & + .chat_msg.player
      margin-top -10px
      padding-top 0
      border-top-left-radius: 0
      border-top-right-radius: 0
      &:before
        display none
    &:before
      background #c4a86f
      left auto
      right 5px
  &.opponent
    & + .chat_msg.opponent
      margin-top -10px
      padding-top 0
      border-top-left-radius: 0
      border-top-right-radius: 0
      &:before
        display none
  &.system
    background transparent
    border 0
    border-radius 0
    width 100%
    text-align right
    font-style italic
    font-size 0.8em
    &:before
      display none
    & + .chat_msg.system
      margin-top -10px
      padding-top 0

.chat_form
  position relative
  width 100%

.chat_input
  display block
  width 100%
  height 100%
  padding 15px
  padding-right 50px
  font-size 1em
  border none
  font-family 'montserratregular'
  color #C3C3C3
  font-size 14px

.chat_send
  position absolute
  top 0
  right 0
  padding 0 10px
  width 50px
  height 100%
  background transparent
  font-size 1em
  color #C3A86F
