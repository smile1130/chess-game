
/* Merida */
.merida .cg-piece
  &.pawn
    &.white
      background-image url('../../images/pieces/merida/wP.svg')
    &.black
      background-image url('../../images/pieces/merida/bP.svg')
  &.bishop
    &.white
      background-image url('../../images/pieces/merida/wB.svg')
    &.black
      background-image url('../../images/pieces/merida/bB.svg')
  &.knight
    &.white
      background-image url('../../images/pieces/merida/wN.svg')
    &.black
      background-image url('../../images/pieces/merida/bN.svg')
  &.rook
    &.white
      background-image url('../../images/pieces/merida/wR.svg')
    &.black
      background-image url('../../images/pieces/merida/bR.svg')
  &.queen
    &.white
      background-image url('../../images/pieces/merida/wQ.svg')
    &.black
      background-image url('../../images/pieces/merida/bQ.svg')
  &.king
    &.white
      background-image url('../../images/pieces/merida/wK.svg')
    &.black
      background-image url('../../images/pieces/merida/bK.svg')

#page.white .otb.mode_facing .cg-piece.black,
#page.black .otb.mode_facing .cg-piece.white,
#page.white .otb.mode_flip.turn_black .cg-piece,
#page.black .otb.mode_flip.turn_white .cg-piece
  &.pawn
    &.white
      background-image url('../../images/pieces/merida/rotated/wP.svg')
    &.black
      background-image url('../../images/pieces/merida/rotated/bP.svg')
  &.bishop
    &.white
      background-image url('../../images/pieces/merida/rotated/wB.svg')
    &.black
      background-image url('../../images/pieces/merida/rotated/bB.svg')
  &.knight
    &.white
      background-image url('../../images/pieces/merida/rotated/wN.svg')
    &.black
      background-image url('../../images/pieces/merida/rotated/bN.svg')
  &.rook
    &.white
      background-image url('../../images/pieces/merida/rotated/wR.svg')
    &.black
      background-image url('../../images/pieces/merida/rotated/bR.svg')
  &.queen
    &.white
      background-image url('../../images/pieces/merida/rotated/wQ.svg')
    &.black
      background-image url('../../images/pieces/merida/rotated/bQ.svg')
  &.king
    &.white
      background-image url('../../images/pieces/merida/rotated/wK.svg')
    &.black
