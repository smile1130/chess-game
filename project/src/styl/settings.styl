.settings_list
  margin-bottom 15px
  height calc(100% - 60px)
  &.general
    margin-bottom 0
    height calc(100% - 90px)

.radio_list
  .list_item
    padding 0
  input.radio:empty
    display none
  input.radio:checked + label
    background-color lighten(bgdark, 5%)
  input.radio:checked + label:after
    display inline-block
    font normal normal normal 14px/1 FontAwesome
    font-size inherit
    text-rendering auto
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    content: "\f00c"
    text-indent .9em
  label
    display block
    padding 15px
    width 100%
    height 100%
    text-transform capitalize

.app_version
  padding 10px 15px
  font-size 0.75em
  color darken(#DFDFDF, 10%)

@media only screen and (min-width 600px)
  #boardThemes
    .list_item
      height 170px
      line-height 135px
      .board_icon
        width 128px
        height 128px

