mainHeaderBg = darken(gold, 5%)
mainHeaderColor = lighten(gold, 80%)
borderLightGray = darken(bglight, 15%)
activeBgLight = darken(themeBgLight, 8%)

.view-container.light
  #page
    background themeBgLight
    color textMediumGray

  #games_menu
    background rgba(0,0,0,0.6)

  button#newGameCorres
    color textMediumGray

  .button
    &.active
      background activeBgLight

  input[type=checkbox]
    background #aaa
    &:checked
      background gold

  .overlay, .menu-close-overlay
    background-color rgba(0,0,0,0.6)

  .card
    background themeBgLight
    box-shadow 0px 2px 15px 0 rgba(0,0,0,0.5)
    .icon-game
      border-color themeBgLight
    h2
      color textDarkGray
    &.challenge
      background gold
      h2
        color #fff

  .list_item
    border-bottom-color borderLightGray
    &.active
      background-color darken(bglight, 5%)

  .ranking
    border-bottom-color borderLightGray

  .playTable
    color textDarkGray

  .antagonistInfos
    .rating
      color textMediumGray
    &.active
      background-color activeBgLight

  .replayMove
    &.active
      background-color darken(themeBgLight, 12%)

  .clock
    color textDarkGray
    &.running
      color darken(gold, 10%)
      &.emerg
        color red

  .action_bar_button
    color textGray
    &.disabled
      color rgba(textGray, 0.4)

  .gameMovesList
    background activeBgLight
    color textMediumGray

  .main_header
    background mainHeaderBg
    box-shadow 0px 1px 1px 0px rgba(0,0,0,0.2)
    > nav > h1
      color themeBgLight
    .chip
      color mainHeaderBg
      background lighten(textGray, 95%)
      border-color mainHeaderBg
    &.board
      background themeBgLight
      box-shadow none
      .chip
        color themeBgLight
        background gold
        border-color themeBgLight
      > nav > h1
        color textGray
      .main_header_button
        color textGray
    &:not(.board)
      .main_header_button
        color mainHeaderColor
        &.active
          background lighten(mainHeaderBg, 8%)
      .game_menu_button
        &::before
          background url('../../images/icons/game_icon_light.svg') no-repeat

  .main_header_button.active, .game_menu_button.active, .action_bar_button.active, .training_action.active
    background activeBgLight

  .radio_list
    input.radio:checked + label
      background-color darken(bglight, 10%)

  .perf
    > .rating
      color textMediumGray
    > .name
      color textDarkGray

  .select_games_filter
    background-color lighten(mainHeaderBg, 30%)
    select
      color #fff
    label:after
      color #fff

  #searchPlayersModal
    > header
      background-color themeBgLight
      color textMediumGray
      border-bottom 1px solid borderLightGray
    > .modal_content
      color textMediumGray
      background-color themeBgLight
    .list_item
      border-bottom-color borderLightGray
      &.active
        background-color darken(bglight, 5%)

  .userGame
    background-color bglight
    color textMediumGray
    &.odd
      background-color darken(bglight, 5%)

  .trainingSection
    color textMediumGray
