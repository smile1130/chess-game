#side_menu
  position absolute
  top 0
  bottom 0
  height 100%
  min-height 100%
  max-height 100%
  width 85%
  font-size 14px
  background #353535
  color #DFDFDF
  overflow hidden
  z-index 3
  transition transform 250ms ease-out
  transform translate3d(-100%,0,0)
  &.in
    box-shadow: 2px 0px 2px rgba(0, 0, 0, 0.5)
    transform translate3d(0,0,0)
  section
    padding 0 15px
  header
    background #2A2A2A
    box-shadow 0px 1px 2px 0px rgba(0,0,0,0.30)
    color #C4A86F
    font-size 15px
    text-align center
  button
    color: #fff;
    padding: 10px;
    font-size: 1em;
  button.login
    background: #454545;
    display: block;
    width: 80%;
    margin: 0 auto;
    text-transform: uppercase;
    &.active
      background lighten(#454545, 5%)
  button.logout
    padding 15px
    background none
    float left
    color #c4a86f;
    width 50px
    display inline-block;
    font-size 1em;
    &.active
      background lighten(#2A2A2A, 5%)
  h3
    text-transform uppercase
    color #fff
    font-weight normal
    margin 40px 0px 30px 0

.side_menu_header
  color #fff
  padding-bottom 1em
  .logo
    background-image url(../../images/pirouettiGoldK.svg)
    background-repeat no-repeat
    background-position center center
    background-size 40px
    margin 0 auto
    height 60px
    width 100%
  h2
    clear both
    line-height 1.5em
    text-transform uppercase
    color #FFF
    margin-bottom 10px

.ratings
  text-align left
  &:after
    color #C4A86F
    content 'u'
    font-family: "lichess" !important;
    width: 100%;
    display: block;
    text-align: center;
    font-size: 20px;
    margin-bottom: -16px;
  &.open:after
    transform rotate(180deg)

.perf
  display inline-block
  text-align left
  width 45%
  padding 5px 0
  line-height 1.2em
  &:nth-child(even)
    margin-left 10%
  &:before
    color #C4A86F
    font-size 2.4em
    float left
    margin-right 5px
  > .rating
    color #fff
    display block
    > .progress, & > .nb
      font-size 0.8em
      margin-left 0.5em
    > .progress
      &.positive
        color #759900
      &.negative
        color #ac524f
      &::before
        vertical-align middle
        margin-right 1px
    > .nb
      opacity 0.4
  > .name
    display block
    color #C4A86F
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

#side_links
  color #AEAEAE
  .hr
    margin 10px 0
    border 1px solid #5f5f5f

.side_link
  padding 10px 0 10px 15px
  margin 5px 0
  line-height 17px
  > span
    color #C4A86F
    font-size 17px
    margin-right 15px
  > .highlight
    color #C4A86F
    font-family 'montserratbold'
  &:last-child
    margin-bottom 10px
  &:active, &.active
    background lighten(#353535, 5%)

.sep_link
  color #8a8a8a
  padding 15px
