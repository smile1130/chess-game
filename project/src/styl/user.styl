#userProfile
  display flex
  flex-flow row wrap
  align-content flex-start
  padding 0 10px
  > section
    width 100%

.warning
  font-size 0.9em
  color orange
  &:before
    margin-right 5px

h3.fullname
  font-weight bold
  margin-bottom 10px

.user_profile_header
  margin-bottom 15px

.userStatus
  position relative
  top 3px
  margin-right 2px
  font-size 1.2em
  &.online
    color green
  &.offline
    opacity 0.6

.userTitle
  color gold

.profileBio
  margin 10px 0
  font-style italic
  word-wrap break-word

.flag
  height 20px
  vertical-align bottom
  margin-right 2px

.onlineStatus, .profile, .userStats
  padding 10px 0

.profile, .userStats
  font-size 0.85em

.perfs
  display flex
  flex-flow row wrap
  padding 10px 0
  font-size 0.9em
  &:after
    content none

.perf
  width 50%
  text-align left
  padding 5px 0
  line-height 1.2em
  &.active
    background lighten(bgdark, 5%)
  &:before
    color gold
    font-size 2em
    float left
    margin-right 5px
  > .rating
    color #fff
    display block
    float left
    > .progress, & > .nb
      font-size 0.8em
      margin-left 0.5em
    > .progress
      &.positive
        color green
      &.negative
        color red
      &::before
        vertical-align middle
        margin-right 1px
    > .nb
      opacity 0.4
  > .name
    display block
    color gold
    text-transform uppercase
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    float left
    width 80%
  &.nav
    &:after
      content "\f054"
      display: inline-block;
      font: normal normal normal 14px/1 FontAwesome;
      font-size: inherit;
      text-rendering: auto;
      -webkit-font-smoothing: antialiased;
      position relative
      float right
      right 15px
      line-height 20px

#userProfileActions
  .check_container
    line-height 30px

.userGamesWrapper
  height 100%

.select_games_filter
  margin 0
  background-color lighten(headerBgDark, 2%)
  label:after
    color labelText
  select
    color lighten(labelText, 50%)

.scroller.games
  height calc(100% - 40px)

.userGame
  background-color lighten(#2a2a2a, 5%)
  color textLightGray
  min-height 60px
  padding 0
  > .nav
    padding 15px
    &:after
      line-height 1
      top 50%
  .iconGame
    color gold
    position absolute
    left 15px
    top 15px
    &:before
      font-size 30px
  .iconStar
    position absolute
    left 15px
    bottom 15px
    width 30px
    padding 0
    text-align center
    color textGray
    &:before
      font-size 25px
  .title
    text-transform uppercase
  .infos
    padding-left 40px
  .players
    margin-top 1em
    > div
      display inline-block
      vertical-align middle
    .swords
      font-size 1.2em
      margin 0 10px
  .playerName
    font-weight bold
  .status
    margin-top 5px
    font-size 0.9em
    &.win
      color green
    &.loose
      color red
  .opening
    margin-top 1em
    font-size 0.8em
  &.odd
    background-color lighten(#353535, 5%)
  @media only screen and (min-width 600px)
    > .nav
      display flex
    .display_board
      width 200px
      height 200px
    .iconStar
      top 15px
      right 15px
      left initial
      bottom initial
    .iconGame
      left 230px
    .infos
      padding-left 50px

#filterGames
  padding-left 15px

div.variantPerfBody
  width: 100%
  padding 10px 10px 0
  font-size 0.85em

table.variantPerf
  width: 100%

.variantPerfHeading
  text-align left
  font-weight bold
  color gold

th.variantPerf
  text-align left
  font-weight normal

td.variantPerf
  text-align right
  > .progress
    &.positive
      color green
    &.negative
      color red

td.variantPerfSpacer
  height 10px

th.variantPerfMemo
  text-align left
  font-weight normal
  padding-left 10px
  font-style italic

td.variantPerfMemo
  text-align right
  font-style italic

.empty
  display none

.variantPerfGames
  > .nav
    padding 15px 0
