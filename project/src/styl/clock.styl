.clockContainer
  display flex
  flex-flow column nowrap
  align-items center
  justify-content space-around
  width 100%
  height 100%

.clockTapArea
  background linear-gradient(to bottom, #e4e4e4 0%, #c2c2c2 100%)
  box-shadow inset 0 -1px 3px rgba(0,0,0,0.8), inset 0 1px 3px rgba(255,255,255,0.6)
  border-radius 10px
  color bgdark
  width 93%
  height 40%
  display flex
  flex-flow column nowrap
  align-items center
  justify-content space-around
  &.top
    transform rotate(180deg)
  &.running
    color white
    background linear-gradient(to bottom, gold 0%, #b5924b 100%)
  &.flagged
    color white
    background linear-gradient(to bottom, #b86765 0%, #89413f 100%)

.clockControls
  width 85%
  height 10%
  display flex
  flex-flow row nowrap
  align-items center
  justify-content space-around
  font-size 3em
  > span
    width 25%
    text-align center
    margin-right 0

.clockTime
  font-size 6em
  &.flagged
    font-family "lichess"!important
    font-size 8em

.stageRow
  display flex
  flex-flow row nowrap
  align-items center
  margin-top 15px
  >.stageRowTitle
    flex: 1 5%
  >.stageRowMember
    flex: 9.5 47.5%
    margin-top 0px
    margin-left 5px
    &.select_input
      &.lastStage
        display none
    &.addSubtractStage
      display none
      &.lastStage
        display block
        margin-right 2%
        text-align center
        font-size 2em
        >.hiddenButton
          display none
