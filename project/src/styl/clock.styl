.clockContainer
  display flex
  flex-flow column nowrap
  align-items center
  justify-content space-around
  width 100%
  height 100%

.clockTapArea
  background bglight
  color black
  width 93%
  height 40%
  display flex
  flex-flow column nowrap
  align-items center
  justify-content space-around
  &.active
    background gold
  &.flagged
    background red
  >.clockTapAreaContent
    flex: 1 33%
    &.top
      display flex
      flex-flow row nowrap
      align-items flex-start
    &.bottom
      display flex
      flex-flow row nowrap
      align-items flex-end
    >.movesHidden
      display none

.clockControls
  width 70%
  height 10%
  display flex
  flex-flow row nowrap
  align-items center
  justify-content space-around
  font-size 3em

.clockTime
  font-size 6em
  &.flagged
    font-family "lichess"!important
    font-size 8em

.stageRow
  display flex
  flex-flow row nowrap
  align-items center
  margin-top 15px
  >.stageRowTitle
    flex: 1 5%
  >.stageRowMember
    flex: 9.5 47.5%
    margin-top 0px
    margin-left 5px
    &.select_input
      &.lastStage
        display none
    &.addSubtractStage
      display none
      &.lastStage
        display block
        margin-right 2%
        text-align center
        font-size 2em
        >.hiddenButton
          display none
