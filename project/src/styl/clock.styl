.clockContainer
  display flex
  flex-flow column nowrap
  align-items center
  justify-content space-around
  width 100%
  height 100%

.clockTapArea
  background bglight
  color black
  width 93%
  height 40%
  display flex
  flex-flow row nowrap
  align-items center
  justify-content space-around
  &.active
    background gold
  &.flagged
    background red

.clockControls
  width 70%
  height 10%
  display flex
  flex-flow row nowrap
  align-items center
  justify-content space-around
  font-size 3em

.clockTime
  font-size 6em
  &.flagged
    font-family "lichess"!important
    font-size 8em

.lastStage
  visibility hidden

.stageRow
  display flex
  flex-flow row nowrap
  align-items center
  margin-top 15px
  >.stageRowTitle
    flex: 2 20%
  >.select_input
    &.stage
      margin-top 0px
      margin-left 5px
      flex: 4 40%
