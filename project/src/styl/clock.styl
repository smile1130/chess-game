.clockContainer
  display flex
  flex-flow column nowrap
  align-items center
  justify-content space-around
  width 100%
  height 100%

.clockTapArea
  background bglight
  width 93%
  height 40%
  display flex
  flex-flow row nowrap
  align-items center
  justify-content space-around
  &.active
    background gold

.clockControls
  width 70%
  height 10%
  display flex
  flex-flow row nowrap
  align-items center
  justify-content space-around
  font-size 3em

.clockTime
  font-size 6em
