.analyseTable
  width 100%
  display flex

.analyseInfos
  background lighten(bgdark, 5%)
  width 40%
  @media only screen and (orientation: portrait)
    height calc(100vh - 100vw - 50px - 45px)
    > .native_scroller
      height calc(100% - 33px)

.cevalBox
  width 100%
  height 33px
  display flex
  justify-content center
  align-items center
  background lighten(bgdark, 10%)
  .spinner
    width 30px
    height 30px
  pearl
    font-size 1.5em
    font-weight bold

.analyseOpponents, .analyseOpening
  padding 5px
  font-size 0.8em

.analyse
  width 60%
  position relative
  @media only screen and (orientation: portrait)
    height calc(100vh - 100vw - 50px - 45px)
    display flex
    flex-flow row wrap
    align-content flex-start
    font-size 0.9em
    padding 2px
    turn
      display inline
      margin-right 10px

    index
      display inline
      margin-right 5px

    move
      display inline
      margin 0 2px
      &.current
        color gold
        font-weight bold
      &.active
        background lighten(bgdark, 10%)

    eval
      font-size 0.7em
      color darken(textDarkBg, 15%)

    .meta
      margin-left 5px
      width 100%
      display flex
      flex-flow row wrap
      align-content flex-start
      font-size 0.8em
      background lighten(bgdark, 5%)

    .result, .status
      width 100%

    .result
      margin-top 1em
      text-align center
      font-weight bold

    .status
      font-size 0.9em
      font-style italic
      text-align center


