.analyseSettings
  label[for='showComments']
    text-transform capitalize

.analyseTable, .explorerTable
  width 100%
  display flex
  > .scrollerWrapper
    width 100%
    @media only screen and (orientation: portrait)
      height "calc(100vh - 100vw - 50px - %s)" % footerHeight
    @media only screen and (orientation: landscape)
      height "calc(100vh - 50px - %s)" % footerHeight
    @media only screen and (max-height 450px) and (orientation landscape)
      height "calc(100vh - 45px - %s)" % footerHeight
    @media only screen and (orientation: landscape) and (min-height 700px) and (max-width 1050px)
      height "calc(100vh - 50px - 12vh - %s)" % footerHeight

.analyseTable
  &.synthetic
    > .analyse
      width 80%
    > .analyseInfos
      width 20%
    .cevalBox
      height 100%
      justify-content center
      > pearl
        width 100%
      > .bestMove
        margin-top 5px

  > .analyse
    width 60%

  > .analyseInfos
    width 40%
    background lighten(bgdark, 5%)
    > .cevalBox + .native_scroller
      height calc(100% - 28px)
    > .native_scroller
      height 100%

.cevalBox
  position relative
  width 100%
  height 28px
  display flex
  flex-flow row wrap
  justify-content space-around
  align-items center
  align-content center
  background lighten(bgdark, 10%)
  > .spinner
    width initial
    height initial
    font-size 18px
    padding 0
    margin 0
    text-align center
  > .cevalBar
    position absolute
    width 100%
    height 3px
    top 0
    left 0
    span
      display block
      background green
      transition width linear 1s
      height 3px
  > pearl
    font-size 20px
    font-weight bold
  > .openSummary
    position absolute
    right 0
    top 0
    height 100%
    width 28px
    font-size 0.9em
    margin-right 0
    opacity 0.7
    display flex
    align-items center
    justify-content center
    > span
      margin 0
  > .bestMove
    font-size 0.7em
    line-height 1.2

.analyseOpponentsWrapper, .analyseOpening, .analyseGameInfos
  padding 5px
  font-size 0.7em

.analyseGameInfosWrapper
  display flex
  border-bottom 1px solid lighten(bgdark, 15%)

.analyseGameInfos
  text-align left
  position relative
  padding-left 25px
  &:before
    font-size 20px
    position absolute
    left 2px
    top 10px
  > .variant
    text-decoration underline

.analyseOpponentsWrapper
  display flex
  flex-flow column wrap
  justify-content flex-start
  > .status
    margin-top 5px
    opacity 0.8

.analyseOpponent
  text-align left
  width 100%
  > .pocket
    width 100%
    height calc(40vw / 6 + 10px)
    > piece
      width calc(40vw / 6)
      height calc(40vw / 6)
      &:after
        padding: 3px 5px 4px 5px;
        font-weight: bold;
        border-radius: 1px;
        font-size: 10px;
        line-height: 10px;
        padding: 1px 2px 2px 2px;
  @media only screen and (orientation: landscape)
    > .pocket
      height calc(((100vw - 100vh - 50px) * 40 / 100) / 6 + 10px)
      max-width initial
      > piece
        width calc(((100vw - 100vh - 50px) * 40 / 100) / 6 + 10px)
        height calc(((100vw - 100vh - 50px) * 40 / 100) / 6 + 10px)
  @media only screen and (orientation: landscape) and (max-height 450px)
    > .pocket
      height calc(((100vw - 100vh - 45px) * 40 / 100) / 6 + 10px)
      > piece
        width calc(((100vw - 100vh - 45px) * 40 / 100) / 6 + 10px)
        height calc(((100vw - 100vh - 45px) * 40 / 100) / 6 + 10px)
  @media only screen and (orientation: landscape) and (min-height 700px) and (max-width 1050px)
    > .pocket
      height calc(((100vw - (100vh - 50px - 12vh)) * 40 / 100) / 6 + 10px)
      > piece
        width calc(((100vw - (100vh - 50px - 12vh)) * 40 / 100) / 6 + 10px)
        height calc(((100vw - (100vh - 50px - 12vh)) * 40 / 100) / 6 + 10px)

.analysePlayerName.crazy
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

.analyseOpening
  height 25px
  background lighten(bgdark, 5%)
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  + .analyseReplay
    height calc(100% - 25px)

.analyseReplay
  height 100%
  position relative
  display flex
  flex-flow row wrap
  align-content flex-start
  font-size 0.9em
  padding 2px
  turn
    display flex
    width 100%
    > move
      position relative
      flex 0 1 calc((100% - 25px) / 2)
      padding 2px 7px
      margin 0
    > index
      font-size 0.9em
      margin 0
      flex 0 0 25px
      text-align center
      background lighten(bgdark, 5%)
      padding 2px 0

  index
    color rgba(textDarkBg, 70%)
    font-weight lighter
    margin-right 5px
    margin-left 5px
    &:first-child
      margin-left 0

  move
    display inline-block
    margin 0 2px
    &.current
      color gold
      font-weight bold
      eval
        color rgba(gold, 70%)
    &.active
      background lighten(bgdark, 10%)

  glyph
    margin-left 2px

  eval
    position absolute
    top 3px
    right 7px
    font-size 0.7em
    font-weight lighter
    color rgba(textDarkBg, 70%)

  .meta
    min-height 25px
    width 100%
    display flex
    flex-flow row wrap
    align-content flex-start
    font-size 0.8em
    background lighten(bgdark, 5%)
    > .comment
      font-size 0.9em
      width 100%
      display flex
      padding: 0 5px
      align-items center
      word-wrap: break-word;
      &.white
        border-left 2px solid #ccc
      &.black
        border-right 2px solid #ccc
        justify-content flex-end
      &.Inaccuracy
        border-color: #56B4E9;
      &.Mistake
        border-color: #E69F00;
      &.Blunder
        border-color: #DF5353;
    > .variationWrapper
      width 100%
      display flex
      align-items center
      > .variation
        flex 0 1 auto
        width calc(100% - 25px)
        white-space nowrap
        &.visiting
          white-space normal
        &.nested
          display inline
          margin-left 5px
      > .menuIcon
        flex 0 0 25px
        width 25px
        height 25px
        font-size 1.5em
        text-align center
        margin 0
        &:before
          position relative
          top 5px

  .result, .status
    font-size 0.8em
    width 100%

  .result
    margin-top 2px
    text-align center
    font-weight bold

  .status
    font-style italic
    text-align center


.variationMenuPopup
  position fixed
  font-size 1rem
  .overlay_popup
    height 100px
    top calc((100% - 100px) / 2)
    border-radius 5px
    text-align center
    > .variationMenu
      display flex
      flex-flow column nowrap
      justify-content center
      height 100%

.importPgnPopup
  textarea
    padding 10px
    margin 30px 10px 0
    width calc(100% - 20px)

.explorerTable
  position relative
  overflow-x: hidden;
  white-space: nowrap;
  .empty
    text-align: center;
  .spinner_overlay
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display flex
    align-items center
    justify-content center
    visibility hidden
    > .spinner
      margin 22px 0 0
      width initial
      height initial
      font-size 25px
  tbody, > .message
    transition: opacity 0.13s;
  th
    text-transform: capitalize;
    padding-left: 7px;
  th, .title
    font-size: 12px;
    line-height: 22px;
    background lighten(bgdark, 10%)
    text-align: left;
    padding-left: 10px;
  tr
    transition: background-color 0.13s;
    &:nth-child(even)
      background: lighten(bgdark, 5%)
  td
    vertical-align middle
    padding-left: 7px;
  .white
    background: #bbb;
    color: #222;
    box-shadow: 0 -5px 7px rgba(0,0,0,0.25) inset;
  .draws, .black
    color: #fff;
    box-shadow: 0 5px 7px rgba(255,255,255,0.2) inset;
  .draws
    background: #666;
    color: #ddd;
  .black
    background: #333;
    box-shadow: 0 5px 7px rgba(255,255,255,0.1) inset;
  .games
    font-size 0.8em
    width: 100%;
    td
      padding: 5px 0 5px 7px;
      max-width: 110px;
      span
        display: block;
        overflow: hidden;
        text-overflow: ellipsis;
    result
      display: block;
      text-align: center;
      padding: 3px 5px;
      border-radius: 3px;
      font-family: monospace;
      font-size: 0.9em;
  .toconf
    position: absolute;
    top: 0;
    right: 0;
    display: block;
    font-size: 20px;
    line-height: 20px;
    width 30px
    height 30px
    text-align: center;
    opacity: 0.7;
  .message
    font-size 0.8em
    text-align: center;
    font-style: italic;
    i
      font-size: 22px;
      display: inline-block;
      margin: 10px 0 0;
      opacity: 0.7;
    h3
      font-weight: bold;
    p
      white-space: normal;
      padding: 0 10px;
  &.loading
    .spinner_overlay
      visibility visible
    tbody, .message
      opacity: 0.4;


.view-container.light
  .explorerTable
    th, .title
      background darken(bglight, 13%)
    tr
      &:nth-child(even)
        background #fafafa
    .white
      background: #fff;
      box-shadow: 0 -5px 7px rgba(0,0,0,0.1) inset;
    .draws
      background: #a0a0a0;
    .black
      background: #555;
      color: #ddd;
  .explorerBar
    border-color #ccc
  .explorerConfig
    span
      border-color #ccc

.explorerConfig
  font-size 0.75em
  section
    padding: 8px 10px 0 10px;
    &.db
      padding-top: 5px;
    &.save
      text-align: center;
      padding: 15px 0 10px 0;
    label
      font-weight: bold;
      display: block;
      line-height: 2em;
      max-width 300px
      margin 0 auto
    .choices
      display: flex;
      max-width 300px
      margin 0 auto
      span
        flex-grow: 1;
        padding: 5px 0;
        text-align: center;
        transition: background 0.13s;
        border: 1px solid #3d3d3d;
        border-width: 1px 0 1px 1px;
        text-transform: capitalize;
        &:first-child
          border-radius: 3px 0 0 3px;
        &:last-child
          border-radius: 0 3px 3px 0;
          border-right-width: 1px;
        &.selected
          background gold
          color: #fff;
          text-shadow: 1px 0 0 rgba(0,0,0,0.5);
          font-weight: bold;
          box-shadow: 0 3px 5px rgba(0,0,0,0.2) inset;

.explorerMove
  &:first-child
    font-size: 14px;
    line-height: 30px;
    padding-left: 7px;
  &:nth-child(2), &:nth-child(3)
    font-size: 10px;
    opacity: 0.8;
    text-align: right;
  &:last-child
    width: 100%;
    padding-right: 7px;

.explorerBar
  text-align: center;
  display: inline-block;
  overflow: hidden;
  vertical-align: middle;
  border: 0px solid #555;
  border-width: 1px 0;
  box-sizing: border-box;
  height: 16px;
  line-height: 16px;
  font-size: 11px;
  &:first-child
    border-top-left-radius: 3px;
    border-bottom-left-radius: 3px;
    border-left-width: 1px;

  &:last-child
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
    border-right-width: 1px;

.explorerTablebase
  width: 100%;
  td:first-child
    font-family: 'ChessSansPiratf', sans-serif;
    font-size: 14px;
    line-height: 30px;
    padding-left: 7px;
  td:last-child
    padding-right: 7px;
    text-align: right;
  result
    padding: 3px 5px;
    margin-left: 5px;
    border-radius: 3px;
    font-size: 0.9em;

.evalSummary
  display flex
  flex-flow row wrap
  justify-content center
  padding 10px
  > table
    width 100%
    &:first-child
      margin-bottom 10px
    > tbody
      font-size 0.9em
  th
    width 20%
    padding: 2px 8px;
    text-align: center;
    > span:before
      margin 0

.analysisProgress
  background-color selectBg
  text-align center
  padding 10px
