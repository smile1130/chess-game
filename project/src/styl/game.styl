.antagonist
  overflow auto
  position relative
  clear both
  .infos
    float left
    width 50%;
    h2
      white-space nowrap
      margin-bottom 3px
  .rp.up
    color green
  .rp.down
    color red
  .rating
    font-size 0.6em
    color #C4A86F
    display inline-block
    vertical-align top
    margin 2px 10px 0 0
    font-family 'montserratlight'
  .vertical_align
    min-height 30px
  .clock
    float right
    max-width 50%
    font-family CousineBold
    text-align right
    min-width 90px
    font-size 25px
    padding-top: 3px;
    &.correspondence
      font-size 17px
  .checks
    font-size 0.6em
    display inline-block
    vertical-align top
    margin 2px 10px 0 0
    font-weight bold
  .tomb
    display inline-block
    margin-left 8px
    div
      margin-left -6px
      width 18px
      height 18px
      margin-top -5px
      background-size cover
      display inline-block
    .pawn
      background-image url(../../images/pieces/mono/P.svg)
    .bishop
      background-image url(../../images/pieces/mono/B.svg)
    .knight
      background-image url(../../images/pieces/mono/N.svg)
    .rook
      background-image url(../../images/pieces/mono/R.svg)
    .queen
      background-image url(../../images/pieces/mono/Q.svg)
    .king
      background-image url(../../images/pieces/mono/K.svg)

.clock.running
  color #C4A86F

.board
  width 100%
  height 100%

#promotion_choice
  border 1px solid black
  background-color rgba(255,255,255, 0.7)
  position absolute
  height 100px
  width 100%
  text-align center
  .cg-piece
    position relative
    display inline-block
    width 60px
    height 60px
    margin 0 5px
    top 17px

#game_actions
  padding 0
  max-height 45px
  position absolute
  bottom 0
  width 100%

.game_action
  display inline-block
  text-align center
  background transparent
  padding 10px 10px 8px
  font-size 1em
  outline none
  border none
  color: #C4A86F
  height 100%
  width 25%
  &:last-child
    border-right none
  &:active, &.active
    background: #C4A86F
    color #fff
  &.empty::before
    visibility hidden
  &:before
    font-size 22px

@keyframes answer_glow {
  50%   {
    color #000
    background #C4A86F
  }
}

#open_player_controls.answer_required,
#open_chat.unread
  animation answer_glow 5s infinite

.player_controls
  header
    line-height 1
    padding 10px
  .icon-game
    display inline-block
    font-size 33px
    color #C4A86F
  .game-title
    display inline-block
    font-size 15px
    line-height 20px
    margin-left 10px
    text-align left
    text-transform uppercase
  button
    &.binany_choice
      display inline-block
      width 50%
      border-bottom none
    &.flipped
      color #C4A86F
    &.active
      background darken(#fff, 10%)
    &.draw-yes:before
      display inline-block
      transform rotate(-90deg)
  .negotiation
    text-align center
  .answers, .force_resign_zone
    margin-top 5px
    color #C4A86F
  .notice
    padding 0 10px
  .status
    color #C4A86F
  .result
    padding 0 10px
    text-align center
    margin 1em 0

.offline_actions
  > .action
    padding 10px
  .select_input
    background darken(#fff, 10%)
    color #383838
    > select
      color #383838

