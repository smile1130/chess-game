.antagonist
  overflow auto
  position relative
  .infos
    float left
  .rating
    font-size 0.8em
    color #C4A86F
    display inline-block
    vertical-align top
    margin 5px 10px 0 0
  .vertical_align
    min-height 30px
    .clock
      font-family CousineBold
      text-align right
      min-width 90px
      font-size 30px
  .material
    display inline-block
    .tomb
      display inline-block
      margin-left 8px
      div
        margin-left -6px
        width 20px
        height 20px
        background-size cover
        display inline-block
      .pawn
        background-image url(../../images/pieces/mono/P.svg)
      .bishop
        background-image url(../../images/pieces/mono/B.svg)
      .knight
        background-image url(../../images/pieces/mono/N.svg)
      .rook
        background-image url(../../images/pieces/mono/R.svg)
      .queen
        background-image url(../../images/pieces/mono/Q.svg)
      .king
        background-image url(../../images/pieces/mono/K.svg)

.clock.running
  color #C4A86F

.board
  width 100%
  height 100%

#promotion_choice
  border 1px solid black
  background-color rgba(255,255,255, 0.7)
  position absolute
  height 100px
  width 100%
  text-align center
  .cg-piece
    position relative
    display inline-block
    width 60px
    height 60px
    margin 0 5px
    top 17px

#game_actions
  border-top 1px solid #EBEBEB
  padding 10px 0

.game_action
  display inline-block
  text-align center
  background transparent
  font-size inherit
  outline none
  border none
  color: #C4A86F
  height 100%
  border-right 1px solid #EBEBEB
  width 25%
  &:active
    color lighten(#C4A86F, 50%)

#open_player_controls.answer_required
  color: red

#open_chat.unread
  color: red

#player_controls
  width 100%
  padding 0 10px
  .answers, .force_resign_zone
    margin-top 2em
  .result
    margin-bottom 2em
  .force_resign_zone > button, .negotiation > button
    width 49%
