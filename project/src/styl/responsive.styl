// targets small devices like iphone 4
@media only screen and (max-device-height 480px)
  .playing
    visibility hidden
  .main_header
    max-height 65px
    section
      position relative
      top -10px
      left 10%
      width 70%
    nav
      h1
        font-size 0.8em
      button
        padding 10px 20px
        &.fa
          font-size 1em
    .antagonist
      .material
        display none
    .vertical_align
      top 0
      transform none
  .main_footer
    min-height 95px

  .card
    top 10%
    .description
      padding 10px 0

  #player_controls .force_resign_zone
    margin-top 0

  #game_actions
    padding 0
