td.tournamentListName
  padding-left 10px
  text-align: left
  text-overflow: ellipsis
  white-space: nowrap;
  overflow hidden
  max-width 0
  width 60%

td.tournamentListTime
  padding 10px
  text-align: center
  max-width 0
  width 35%

td.tournamentListNav
  font: normal normal normal 14px/1 FontAwesome
  font-size: inherit
  text-rendering: auto
  -webkit-font-smoothing: antialiased
  max-width 0
  width 10%
  text-align right
  padding-right 10px

p.tournamentTitle
  text-align left
  font-weight bold
  color gold
  padding-left 10px
  margin 10px 0 5px

table.tournamentList
  width 100%

table.tournamentStandings
  width 100%

.on-fire
  line-height 10px
  &:before
    content: attr(data-icon)
    color: #d59120

.off-fire
  line-height 10px
  &:before
    content: ''

td.tournamentPlayer
  padding 10px
  text-align: left
  text-overflow: ellipsis
  white-space: nowrap;
  overflow hidden
  max-width 0
  width 80%

.progress
  &.positive
    color green
  &.negative
    color red

td.tournamentPoints
  padding 10px
  text-align: right
  max-width 0
  width 20%

.timeArrow
  font-weight: bold

.tournamentHeader
  padding 10px

.tournamentInfoTime
  padding-bottom 5px
  border-bottom 1px solid borderColor

.tournamentCreatorInfo
  font-size 0.85em
  padding-top 5px

.tournamentInfo
  &:before
    content: attr(data-icon)

.timeInfo
  float right

.tournamentMiniBoard
  display flex
  flex-flow column wrap
  justify-content flex-start
  align-items center

.podium
  display flex
  flex-direction row
  padding-right 10px
  >div
    font-size 0.8em
    display flex
    flex-direction column
    justify-content flex-end
    >div
      margin 0 auto
      text-align center
    >.trophy
      width 50%

.place1
  flex 4 400%
  .trophy
    content: url('../../images/trophies/trophy-1.png')

.place2
  flex 3 300%
  .trophy
    content: url('../../images/trophies/trophy-2.svg')

.place3
  flex 2.5 250%
  .trophy
    content: url('../../images/trophies/trophy-3.svg')

.stats
  font-size .7em
  margin 0 auto

.statName
  text-align left

.statData
  text-align right
