td.tournamentListName
  text-align: left
  text-overflow: ellipsis
  white-space: nowrap;
  overflow hidden
  max-width 0
  width 60%
  position relative
  &:first-child
    padding-left 45px
  &:before
    position absolute
    left 10px
    top 17px
    font-size 25px
  > .fullName
    overflow hidden
    text-overflow ellipsis

td.tournamentListTime
  > .time
    letter-spacing 0px
  padding 10px
  text-align right
  max-width 0
  width 35%

td.tournamentListNav
  font: normal normal normal 14px/1 FontAwesome
  font-size: inherit
  text-rendering: auto
  -webkit-font-smoothing: antialiased
  max-width 0
  width 10%
  text-align right
  padding-right 10px

p.tournamentTitle
  text-align left
  font-weight bold
  color gold
  padding-left 10px
  margin 10px 0 5px

table.tournamentList
  width 100%

table.tournamentStandings
  width 100%

.on-fire
  line-height 10px
  &:before
    content: attr(data-icon)
    color: #d59120

.off-fire
  line-height 10px
  &:before
    content: ''

td.tournamentPlayer
  padding 10px
  text-align: left
  text-overflow: ellipsis
  white-space: nowrap;
  overflow hidden
  max-width 0
  width 80%

.list_item.me
  >td.tournamentPlayer
    border-left 10px solid #d59120
    padding-left 5px

.progress
  &.positive
    color green
  &.negative
    color red

td.tournamentPoints
  padding 10px
  text-align: right
  max-width 0
  width 20%

.timeArrow
  font-weight: bold

.tournamentHeader
  padding 10px

.tournamentInfoTime
  padding-bottom 5px
  border-bottom 1px solid borderColor

.tournamentCreatorInfo
  font-size 0.85em
  padding-top 5px

.tournamentInfo
  &:before
    content: attr(data-icon)

.timeInfo
  float right

.tournamentMiniBoard
  display flex
  flex-flow column wrap
  justify-content flex-start
  align-items center

.podium
  display flex
  flex-flow row nowrap
  font-size 0.75em
  margin 0 10px
  align-items flex-end
  > div
    overflow hidden
    text-overflow ellipsis
    display flex
    flex-flow column wrap
    justify-content flex-end
    > div
      margin 0 auto
      text-align center
    > .trophy
      min-height 0 // chrome 48 bug workaround
      margin-bottom 5px

.place1
  width 44%
  font-size 1.25em
  > .trophy
    width 75%
    content: url('../../images/trophies/trophy-1.png')

.place2
  width 31%
  font-size 1.1em
  > .trophy
    width 55%
    content: url('../../images/trophies/trophy-2.svg')

.place3
  width 25%
  font-size 1em
  > .trophy
    width 50%
    content: url('../../images/trophies/trophy-3.svg')

.stats
  font-size .7em
  margin 0 auto

.statName
  text-align left

.statData
  text-align right

.navigationButtons
  display flex
  flex-flow row wrap
  align-items center
  align-self center
  margin-bottom 5px
  &.invisible
    display none

.navigationButton
  border-radius 4px
  text-align center
  border-style solid
  border-color #323232
  border-width 1px
  padding 0px 2px 4px 2px
  width 40px
  &:before
    font-family "lichess" !important
    font-size 1.2em
    content attr(data-icon)
    vertical-align middle
  &.invisible
    display none
  &.me
    width 60px
    &:before
      margin-right 5px
    &.activated
      color #ccc!important
      text-shadow 0 1px 0 #000!important
      background #444!important
      border-color #404040!important
      box-shadow 0 3px 4px rgba(0,0,0,0.35) inset!important

.pageInfo
  margin 0px 5px 0px 5px

.tournamentLeaderboard
  display flex
  flex-flow column nowrap

.tournamentFaq
  padding 10px
  h2
    font-weight bold
    font-size 1.1em
    &:not(:first-child)
      margin-top 15px
