// base
.cg-board
  user-select none
  background-size cover
  position relative
  width 100%
  height 100%
  &.minimal-dom
    transform none

square
  position absolute
  width 12.5%
  height 12.5%
  &.move-dest
    background radial-gradient(rgba(20, 85, 30, 0.5) 22%, #208530 0, rgba(0, 0, 0, 0.3) 0, rgba(0, 0, 0, 0) 0)
    &.occupied
      background radial-gradient(transparent 0%,transparent 80%,rgba(20,85,0,0.3) 80%)
  &.premove-dest
    background radial-gradient(rgba(20, 30, 85, 0.5) 22%, #203085 0, rgba(0, 0, 0, 0.3) 0, rgba(0, 0, 0, 0) 0)
    &.occupied
      background radial-gradient(transparent 0%,transparent 80%,rgba(20,30,85,0.3) 80%)
  &.last-move
    background-color rgba(155, 199, 0, 0.41)
  &.selected
    background-color rgba(20, 85, 30, 0.5)
  &.check
    background radial-gradient(ellipse at center, rgba(255, 0, 0, 1) 0%, rgba(231, 0, 0, 1) 25%, rgba(169, 0, 0, 0) 89%, rgba(158, 0, 0, 0) 100%)
  &.current-premove
    background-color rgba(20, 30, 85, 0.5)
  &.exploding
    background-color rgba(255, 0, 0, 0.5)
  &.selected
    background-color rgba(216, 85, 0, 0.3)

square[data-coord-x]:after, square[data-coord-y]:before
  position absolute
  font-family Cousine
  font-weight bold
  font-size 11px
  line-height 11px
  @media (min-width 600px)
    font-size 15px
    line-height 15px


square[data-coord-x]:after
  left 1px
  bottom 0px
  content attr(data-coord-x)

square[data-coord-y]:before
  right 1px
  top 1px
  content attr(data-coord-y)

piece
  position absolute
  bottom 0
  left 0
  width 100%
  height 100%
  background-size cover
  z-index 2
  transform translate3d(0,0,0)
  &.fading
    z-index 1
  &.dragging
    z-index 3
    &.magnified
      width 200%
      height 200%

.cg-square-target
  position absolute
  background-color rgba(0, 0, 0, 0.2)
  border-radius 50%
  transform translate3d(0,0,0)

// view only boards
.minimal-dom piece
  position absolute
  transform none
  width 12.5%
  height 12.5%
