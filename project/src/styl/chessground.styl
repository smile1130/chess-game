// base
.cg-board-wrap
  width 100%
  height 100%
  position relative
  background-size cover

.cg-board
  user-select none
  background transparent
  position relative
  z-index 2
  width 100%
  height 100%

.cg-square
  position absolute
  width 12.5%
  height 12.5%
  &.last-move
    background-color rgba(155, 199, 0, 0.41)
  &.check
    background radial-gradient(ellipse at center, rgba(255, 0, 0, 1) 0%, rgba(231, 0, 0, 1) 25%, rgba(169, 0, 0, 0) 89%, rgba(158, 0, 0, 0) 100%)
  &.selected
    background rgba(216, 85, 0, 0.3)
  &.fading
    z-index 1

.cg-square[data-coord-x]::after
  position absolute
  left 1px
  bottom 1px
  font-size 10px
  line-height 10px
  content attr(data-coord-x)

.cg-square[data-coord-y]::before
  position absolute
  right 1px
  top 1px
  font-size 10px
  line-height 10px
  content attr(data-coord-y)

.cg-piece
  position absolute
  bottom 0
  left 0
  width 100%
  height 100%
  background-size cover
  z-index 3
  transform translate3d(0,0,0)
  &.dragging
    width 200%
    height 200%
    z-index 4

.cg-square-target
  position absolute
  background-color rgba(0, 0, 0, 0.2)
  border-radius 50%
  transform translate3d(0,0,0)

// view only boards
.minimal-dom .cg-piece
  position absolute
  transform none
  width 12.5%
  height 12.5%
