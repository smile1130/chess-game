// standard 2D boards
.brown .cg-board
  background-image url('../../images/board/brown.jpg')
  > .cg-square[data-coord-x]
    &:nth-child(odd)
      color rgba(#f0d9b5, 1)
    &:nth-child(even)
      color rgba(#b58863, 1)
  > .cg-square[data-coord-y]
    &:nth-child(8), &:nth-child(24), &:nth-child(40), &:nth-child(56)
      color rgba(#f0d9b5, 1)
    &:nth-child(16), &:nth-child(32), &:nth-child(48), &:nth-child(64)
      color rgba(#b58863, 1)
