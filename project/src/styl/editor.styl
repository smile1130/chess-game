pitHeight = (100vh - 50px) / 8
pitHeightBigScreen = (100vh - 50px) / 8 + 5vh

.editor
  .game_board_wrapper
    transform none
  @media only screen and (orientation: portrait)
    height 100%
  @media only screen and (orientation: landscape)
    height calc(100vh - 50px)
    width "calc(100vh - 50px - (%s * 2))" % pitHeight
    flex 0 0 auto
    display flex
    flex-flow column nowrap
    align-items center
    justify-content space-around
    .game_board_wrapper
      margin 0
      height "calc(100% - (%s * 2))" % pitHeight
      width 100%
  @media only screen and (orientation: landscape) and (min-height 700px)
    width "calc(100vh - 50px - (%s * 2))" % pitHeightBigScreen
    flex 0 0 auto
    margin auto 0
    .game_board_wrapper
      height "calc(100% - (%s * 2))" % pitHeightBigScreen
      width 100%

.sparePieces
  height "calc((100% - 100vw - %s) / 2)" % footerHeight
  display flex
  justify-content center
  align-items center
  padding 0 10px
  color #fff
  overflow hidden
  background-color #777
  box-shadow 0px 1px 3px 1px rgba(0,0,0,0.2) inset
  @media only screen and (orientation: landscape)
    height "calc(%s)" % pitHeight
  @media only screen and (orientation: landscape) and (min-height 700px)
    height "calc(%s - 2vh)" % pitHeightBigScreen

.sparePieceWrapper
  position relative
  display inline-block
  width calc(100vw / 8 - 1vh)
  height calc(100vw / 8 - 1vh)
  > piece
    z-index 1
  @media only screen and (orientation: landscape)
    width "calc(%s - 1vh)" % pitHeight
    height "calc(%s - 1vh)" % pitHeight
  @media only screen and (orientation: landscape) and (min-height 700px)
    width "calc(%s - 3vh)" % pitHeightBigScreen
    height "calc(%s - 3vh)" % pitHeightBigScreen

.editorMenu
  > .popup_content
    padding 10px
  .select_input
    margin-top 0
    &.color
      margin-top 10px
    select
      padding-left 80px
  .castling
    margin-top 10px
  .check_container
    margin-top 10px

.table.editorTable
  padding 0 10px
  height "calc(100vh - %s * 2)" % pitHeight
  @media only screen and (orientation: landscape) and (min-height 700px)
    height "calc(100vh - %s * 2)" % pitHeightBigScreen
  > .editorMenuOuter
    flex 1 1 auto
    display flex
    flex-flow column nowrap
    justify-content space-around
    align-items center
    .check_container
      margin-top 10px
    > .editorMenuInner
      width 100%
    @media only screen and (orientation: landscape) and (max-height 450px)
      > .editorMenuInner
        width 70%
    @media only screen and (orientation: landscape) and (min-height 700px)
      > .editorMenuInner
        width 80%
      .castling
        margin-top 3em


.continueFromHere
  h2
    font-weight bold
  .sep
    margin-top 10px
    padding-left 10px
    color textMediumGray
