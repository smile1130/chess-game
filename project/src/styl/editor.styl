.editor
  height 100%

.sparePieces
  height calc((100% - 100vw - 45px) / 2)
  padding 0 10px
  display flex
  justify-content space-between
  align-items center
  color #fff
  overflow hidden
  background-color #bbb
  box-shadow 0px 0px 3px 2px rgba(0,0,0,0.2) inset

.sparePieceWrapper
  position: relative;
  display: inline-block;
  width: 44px;
  height: 44px;
