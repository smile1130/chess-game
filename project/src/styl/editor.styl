.editor
  height 100%

.sparePieces
  height calc((100% - 100vw - 45px) / 2)
  display flex
  justify-content center
  align-items center
  padding 0 10px
  color #fff
  overflow hidden
  background-color #888
  box-shadow 0px 0px 3px 2px rgba(0,0,0,0.2) inset

.sparePieceWrapper
  position relative
  display inline-block
  width calc(100vw / 8)
  height calc(100vw / 8)

.editorMenu
  > .popup_content
    padding 10px
  .select_input
    margin-top 0
    &.color
      margin-top 10px
    select
      padding-left 80px
  .castling
    margin-top 10px
  .check_container
    margin-top 10px
