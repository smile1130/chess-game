/* COLORS */
bgdark = #1c2328
bglight = #f5f5f5
bgpopup = #eeeeee
gold = #C4A86F
orange = #d85000
textLightGray = #aeaeae
textDarkGray = #383838
labelText = #8a8a8a

body
  overflow hidden
  font-family 'Open Sans'
  font-size 95%
  background-color: bgdark

h2
  text-transform uppercase

button
  border none
  outline none
  -webkit-tap-highlight-color rgba(0,0,0,0)
  user-select none
  background-color transparent
  &.disabled
    opacity 1
    &::before
      opacity 0.4

input
  -webkit-appearance none

span.fa
  margin-right 10px

.disabled
  opacity 0.5

.hide
  display none

.clearfix:after
  content: ".";
  visibility: hidden;
  display: block;
  height: 0;
  clear: both;

.small
  font-size 0.85em

.scroller
  overflow hidden
  &.page
    height calc(100% - 50px)

.native_scroller
  overflow-y auto
  -webkit-overflow-scrolling: touch;
  height calc(100% - 50px) // page height minus header height

.vertical_align
  position relative
  top 50%
  transform translateY(-50%)

/* lists */
.list_item
  position relative
  line-height 20px
  padding 15px
  border-bottom 1px solid #2E3033
  &:last-child
    border-bottom none
  &.active
    background lighten(bgdark, 5%)

.nav:after
  content "\f054"
  display: inline-block;
  font: normal normal normal 14px/1 FontAwesome;
  font-size: inherit;
  text-rendering: auto;
  -webkit-font-smoothing: antialiased;
  position absolute
  right 15px
  line-height 20px
