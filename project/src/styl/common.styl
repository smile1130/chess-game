body
  overflow hidden
  font-family 'montserratregular'
  background-color: #1c2328

h2
  text-transform uppercase
  font-family 'montserratbold'
  font-size 0.9em


button
  border none
  outline none
  -webkit-tap-highlight-color rgba(0,0,0,0)
  user-select none

input
  -webkit-appearance none

.fa:before
  margin-left -3px

.disabled
  opacity 0.4

button.disabled
  opacity 1
  &::before
    opacity 0.4

.hide
  display none

.vertical_align
  position relative
  top 50%
  transform translateY(-50%)

.loader_circles
  display inline-block
  width 55px
  height 12px

.loader_circles div {
  background-color:#C4A86F;
  opacity: 0;
  float:left;
  height:13px;
  width:13px;
  margin-left:5px;
  animation-name:bounce_loader_circles;
  animation-duration:2s;
  animation-iteration-count:infinite;
  animation-direction:linear;
  border-radius:50%;
}

.loader_circles .circle_1 {
  animation-delay: 0.5s;
}

.loader_circles .circle_2 {
  animation-delay: 1s;
}

.loader_circles .circle_3 {
  animation-delay: 1.5s;
}

@keyframes bounce_loader_circles {
  0% { }
  50% { opacity: 1 }
  100% { }
}
