/* COLORS */
bgdark = #1c2328
themeBgLight = #eeeeee // TODO rename
bglight = #f5f5f5
bgpopup = #eeeeee
gold = #C4A86F
orange = #d85000
textLightGray = #aeaeae
textMediumGray = #707070
textDarkGray = #383838
textGray = #656565
labelText = #969696
green = #759900
red = #ac524f

selectBg = #e6e6e6
headerBgDark = #151a1e

html
  font-family 'Noto Sans', sans-serif
  font-size 100%

body
  background-color bgdark
  overflow hidden

// workaround for ios: the direct parent of an input must have user-select: text
.allow_select
  user-select text

button
  border none
  outline none
  -webkit-tap-highlight-color rgba(0,0,0,0)
  user-select none
  background-color transparent
  &.disabled
    opacity 1
    &::before
      opacity 0.4

input
  -webkit-appearance none

span.fa
  margin-right 10px

.disabled
  opacity 0.5

.hide
  display none

.clearfix:after
  content: ".";
  visibility: hidden;
  display: block;
  height: 0;
  clear: both;

.small
  font-size 0.85em

.scroller
  overflow hidden
  &.page
    height 100%

.native_scroller
  overflow-y auto
  -webkit-overflow-scrolling touch
  &.page
    height 100%

.vertical_align
  position relative
  top 50%
  transform translateY(-50%)

.button
  &.active
    background lighten(bgdark, 5%)

/* lists */
.list_item
  position relative
  line-height 20px
  padding 15px
  border-bottom 1px solid #2E3033
  &:before
    margin-right 10px
  &:last-child
    border-bottom none
  &.active
    background lighten(bgdark, 5%)
  &.bglight
    border-bottom-color darken(bglight, 15%)
    &.active
      background-color darken(bglight, 5%)

.nav
  &:after
    content "\f054"
    display: inline-block;
    font: normal normal normal 14px/1 FontAwesome;
    font-size: inherit;
    text-rendering: auto;
    -webkit-font-smoothing: antialiased;
    position absolute
    right 15px
    line-height 20px

.userStatus
  position relative
  top 3px
  margin-right 2px
  font-size 1.2em
  &.online
    color green
  &.offline
    opacity 0.6

.withIcon
  &[data-icon]:before, &.fa:before
    margin-right 5px
    position relative
  &[data-icon]:before
    top 2px
