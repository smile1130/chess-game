.inboxWrapper
  height 100%

.emptyInbox
  padding-left 10px
  padding-top 5px

table.threadList
  width 100%
  tr.unread
    font-weight bold
  td.threadAuthor
    text-align: left
    text-overflow: ellipsis
    white-space: nowrap
    overflow hidden
    width 30%
    position relative
    max-width 0
  td.threadName
    text-align: left
    text-overflow: ellipsis
    white-space: nowrap
    overflow hidden
    width 50%
    position relative
    max-width 0
  td.threadDate
    text-align: left
    width 20%
    white-space: nowrap
    overflow hidden
    position relative
    max-width 0

.threadWrapper
  height 100%
  >.responseWrapper
    width 90%
    margin 0 auto
    textarea
      width 100%
      height 100px
      background transparent
      border 1px solid #555555
      margin 5px 0px 5px 0px
      &::placeholder
        opacity 0.6
    button
      margin 0 auto
      color gold
      width 50%
  >.postWrapper
    width 90%
    margin 0 auto
    padding 5px 0px 5px 0px
    border-top 1px solid #555555
    &.first
      border-top none
    .infos
      width 90%
      margin 0 auto
      margin-bottom 0.5em
      display block
      >.arrow
        vertical-align middle
        line-height 1
      >.user
        display inline

.composeWrapper
  width 95%
  margin 0 auto
  input
    padding-left 5px
    border none
    outline none
  .composeInput
    background transparent
    border 1px solid #555555
    width 100%
    margin 5px 0px 5px 0px
    &::placeholder
      opacity 0.6
  textarea
    width 100%
    height 430px
  button
    margin 0 auto
    color gold
    width 50%
