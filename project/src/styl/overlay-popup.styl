.popup_overlay_close
  position absolute
  width 100%
  height 100%
  z-index 11

.overlay_popup
  position absolute
  border-radius 0 0 5px 5px
  top 20%
  left 10%
  width 80%
  max-height 90%
  z-index 12
  background-color #fff
  color textDarkGray
  box-shadow 0 0 35px 10px rgba(0,0,0,0.5)
  > header
    text-align center
    position relative
    min-height 45px
    line-height 45px
    width 100%
    border-bottom solid 1px #E1E1E1
    > h2
      text-align center
      line-height 45px
  button
    display block
    width 100%
    margin 0
    padding 0
    min-height 45px
    background #fff
    color textDarkGray
    border-bottom 1px solid #E1E1E1
    &.binary_choice
      float left
      width 50%
      border-bottom none
    &.active
      background darken(#fff, 10%)
    &[data-icon=E].active
      background lighten(gold, 10%)
    &:before
      margin-right 10px
    &:last-child
      border-bottom none
      border-radius 0 0 5px 5px
  .loader:before, .loader:after
    background-color #fff
  @media only screen and (min-device-width 700px)
    width 50%
    left 25%
    right 25%
  @media only screen and (max-device-height 480px)
    max-height 85%
    top 10%
