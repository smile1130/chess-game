.overlay.popup
  background rgba(0,0,0,0.5)

.popup_overlay_close
  position absolute
  width 100%
  height 100%
  z-index 11

.overlay_popup
  position absolute
  top 20%
  left 10%
  width 80%
  max-height 70%
  z-index 12
  border-radius 5px
  background-color: #fff
  color #383838
  box-shadow 5px 5px 10px 0px rgba(0,0,0,0.5)
  > header
    text-align center
    position relative
    min-height 45px
    line-height 45px
    width 100%
    border-bottom solid 1px #E1E1E1
    > h2
      text-align center
      line-height 45px
  button:first-child, button:last-child
    border-radius 5px
  @media only screen and (min-device-width 700px)
    width 50%
    left 25%
    right 25%
  @media only screen and (max-device-height 480px)
    max-height 85%
    top 10%

.popup_content
  padding-bottom 5px
