#searchPlayersModal
  color textLightGray
  > header
    background-color #151a1e
    border-bottom-style none
    display flex
    justify-content space-between
    > button
      width 50px
      background transparent
      padding 15px
      margin 0
      color gold
      font-size 20px
      line-height 20px
      &.active
        background lighten(bgdark, 8%)
  > .modal_content
    background bgdark

.search_input
  position relative
  width calc(100% - 70px)
  margin 0 auto
  height 50px
  > input
    background transparent
    width 100%
    height 100%
    border none
    outline none
    margin 0
    padding 0
    &::placeholder
      opacity 0.6

.playerSuggestion
  display flex
  justify-content space-between
  padding-right 35px

.ranking
  padding 15px

.rankingPerfTitle
  color gold
  font-size 1.1rem
  &:before
    margin-right 10px

.rankingPlayer
  padding 15px 0
  display flex
  justify-content space-between
