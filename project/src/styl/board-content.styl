.game_board_wrapper, .board_wrapper
  @media only screen and (orientation: portrait)
    height 100vw
    width 100vw
  @media only screen and (orientation: landscape)
    height calc(100vh - 50px)
    width calc(100vh - 50px)
    flex 0 0 auto
  @media only screen and (orientation: landscape) and (min-height 700px) and (max-width 1050px)
    height calc(100vh - 50px - 12vh)
    width calc(100vh - 50px - 12vh)
    flex 0 0 auto
    margin auto 0

.game_board_wrapper
  position relative
  .variant_reminder
    position: absolute;
    top: 0;
    left: 0;
    z-index: 5;
    transition: 0.6s;
    text-shadow: 7px 10px 2px rgba(0, 0, 0, 0.3);
    width: 100%
    height: 100%
    text-align: center;
  .variant_reminder::before
    font-size: 290px;
    opacity: 0.9;
    color: #888;
  .variant_reminder.gone
    opacity: 0;
    transform: translateY(-100px);

.display_board
  width 100%
  height 100%

.actions_bar
  display flex
  padding 0
  height 40px
  width 100%
  @media only screen and (orientation: landscape)
    width calc(100vw - (100vh - 50px) - 10px)
  @media only screen and (orientation: landscape) and (min-height 700px) and (max-width 1050px)
    width calc(100vw - (100vh - 50px - 12vh) - 10px)

.action_bar_button
  flex 1 1 25%
  text-align center
  background transparent
  padding 10px 10px 8px
  outline none
  border none
  color: gold
  height 40px
  line-height 30px
  width 25%
  &:last-child
    border-right none
  &.disabled
    &:before
      opacity 1
    color rgba(gold, 0.4)
  &.active
    background lighten(bgdark, 8%)
    color lighten(gold, 40%)
  &.empty::before
    visibility hidden
  &.glow
    animation answer_glow 5s infinite
  &.highlight
    color #000
    background gold
  &:before
    font-size 18px
    line-height 18px
  &.fa
    padding 7px 10px 10px
  @media only screen and (max-height 400px) and (orientation landscape)
    height 40px
    line-height 25px
    &:before
      font-size 18px
      line-height 18px

.table
  height 100%
  display flex
  flex-flow column nowrap
  margin 0 1rem
  > header
    flex 0 0 auto
  > .playersTable
    margin 1em 0
    flex 1 1 auto
    display flex
    flex-flow column nowrap
    justify-content space-around
  @media only screen and (orientation landscape)
    width calc(100vw - 100vh + 50px - 2rem)
  @media only screen and (max-height 400px) and (orientation landscape)
    font-size 0.7rem
    > .tableHeader
      > .icon-game
        font-size 20px
        vertical-align bottom
      > .game-title
        font-size 0.6rem
        line-height 14px
    > .playersTable
      margin 10px 0
      justify-content space-around
    .playTable
      padding-left 0
    .clock
      font-size 20px
      &.correspondence
        font-size 15px
  @media only screen and (orientation: landscape) and (min-height 700px) and (max-width 1050px)
    width calc(100vw - 100vh + 50px + 12vh - 2rem)
  @media only screen and (min-height 800px) and (orientation: landscape)
    > .playersTable
      margin 2rem 0
  @media only screen and (orientation: landscape) and (min-height 700px)
    margin auto 1rem
    .clock
      font-size 30px
      max-width 160px
    .antagonistInfos
      max-width calc(100% - 160px)
  @media only screen and (orientation: landscape) and (min-height 700px) and (max-width 1050px)
    height calc(100vh - 50px - 12vh)
    margin auto 1rem

