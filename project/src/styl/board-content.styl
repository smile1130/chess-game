.content_round
  width 100%
  height calc(100% - 50px)
  @media only screen and (orientation: landscape)
    display flex
  @media only screen and (max-height 450px) and (orientation landscape)
    height calc(100vh - 45px)

.table, .analyseTableWrapper
  flex 1 1 auto
  @media only screen and (orientation landscape)
    width calc(100vw - 100vh + 50px)
    height 100%
  @media only screen and (orientation landscape) and (max-height 450px)
    width calc(100vw - 100vh + 45px)
  @media only screen and (orientation: landscape) and (min-height 700px) and (max-width 1050px)
    margin auto 0
    width calc(100vw - 100vh + 50px + 12vh)
    height calc(100vh - 50px - 12vh)

.game_board_wrapper, .board_wrapper
  @media only screen and (orientation: portrait)
    height 100vw
    width 100vw
  @media only screen and (orientation: landscape)
    height calc(100vh - 50px)
    width calc(100vh - 50px)
    flex 0 0 auto
  @media only screen and (max-height 450px) and (orientation landscape)
    height calc(100vh - 45px)
    width calc(100vh - 45px)
  @media only screen and (orientation: landscape) and (min-height 700px) and (max-width 1050px)
    height calc(100vh - 50px - 12vh)
    width calc(100vh - 50px - 12vh)
    flex 0 0 auto
    margin auto 0

  > svg
    overflow: hidden;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 2;
    opacity: 0.6;

  > svg *
    transition: 0.3s;

.game_board_wrapper
  position relative
  .variant_reminder
    position: absolute;
    top: 0;
    left: 0;
    z-index: 5;
    transition: 0.6s;
    text-shadow: 7px 10px 2px rgba(0, 0, 0, 0.3);
    width: 100%
    height: 100%
    text-align: center;
  .variant_reminder::before
    font-size: 290px;
    opacity: 0.9;
    color: #888;
  .variant_reminder.gone
    opacity: 0;
    transform: translateY(-100px);

.display_board
  width 100%
  height 100%

.actions_bar
  display flex
  padding 0
  height footerHeight
  width 100%
  overflow hidden

.action_bar_button
  flex 1 1 25%
  text-align center
  background transparent
  padding 0
  outline none
  border none
  color: gold
  height footerHeight
  width 25%
  &:last-child
    border-right none
  &.disabled
    &:before
      opacity 1
    color rgba(gold, 0.4)
  &.active
    background lighten(bgdark, 8%)
    color lighten(gold, 40%)
  &.empty::before
    visibility hidden
  &.glow
    animation answer_glow 5s infinite
  &.highlight
    color #000
    background gold
  &:before
    font-size 18px
    line-height 45px
  &[data-icon='2']
    transform rotate(-90deg)
  @media only screen and (max-height 400px) and (orientation landscape)
    &:before
      font-size 16px

.table
  display flex
  flex-flow column nowrap
  > header
    flex 0 0 auto
  > .playersTable
    padding 0 10px
    margin 1em 0
    flex 1 1 auto
    display flex
    flex-flow column nowrap
    justify-content space-around
  @media only screen and (max-height 400px) and (orientation landscape)
    font-size 0.7rem
    > .tableHeader
      > .icon-game
        font-size 20px
        vertical-align bottom
      > .game-title
        font-size 0.6rem
        line-height 14px
    > .playersTable
      margin 10px 0
      justify-content space-around
    .playTable
      padding-left 0
    .clock
      font-size 20px
      &.correspondence
        font-size 15px
  @media only screen and (min-height 800px) and (orientation: landscape)
    > .playersTable
      margin 20px 0
  @media only screen and (orientation: landscape) and (min-height 700px)
    .clock
      font-size 30px
      max-width 160px
    .antagonistInfos
      max-width calc(100% - 160px)

.board_alert
  position: absolute;
  bottom: -28px;
  left: 0;
  height: 28px;
  width: 100%;
  text-align: center;
  padding: 5px 0;
  font-weight: bold;
  font-size 0.8em
  color: #fff;
  overflow hidden
  text-overflow ellipsis
  background: rgba(orange, 0.8)
  z-index: 50;
