.view-container
  position absolute
  display block
  overflow hidden
  width 100%
  height 100%

main
  position absolute
  height 100%
  width 100%
  background bgdark
  color textLightGray
  overflow hidden

.menu-close-overlay
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  z-index 2
  background rgba(0,0,0,0.5)
  visibility hidden

main.out
  .menu-close-overlay
    visibility visible
  .game_menu_button
    visibility hidden

.main_header
  background #151a1e
  height 50px
  &.board
    background inherit
  nav
    height 50px
    overflow hidden
    display flex
    justify-content space-between
    h1
      line-height 50px
      color gold
      &.playing
        text-transform none
      &.reconnecting
        white-space nowrap
        overflow hidden
        text-align center
        height 50px
    button
      background transparent
      padding 15px
      margin 0
      color gold
      font-size 20px
      line-height 20px
      &.active
        background lighten(bgdark, 8%)
  .back_button
    font-size 1.1em
    width auto
    max-width 70%
    height 50px
    white-space nowrap
    padding 0
    overflow hidden
    text-overflow ellipsis
    text-align left
    > .title, .fa
      display inline-block
      height 50px
      padding 15px 0 15px 15px
    > span.fa
      font-size 18px
      margin 0
      margin-right 10px
    > .title
      padding-left 0
      padding-right 15px
    &:before
      margin-right 10px
    &.active
      background lighten(bgdark, 8%)
  .buttons
    min-width 85px
  .friends_button
    position relative
    padding-right 10px
    color rgba(gold, 0.75)
    > .chip
      position absolute
      font-size 10px
      font-weight bold
      line-height 12px
      letter-spacing 0px
      color bgdark
      border 2px solid bgdark
      border-radius 50%
      height 17px
      width 17px
      top 10px
      left 7px
      background lighten(gold, 50%)
    + .game_menu_button
      padding-left 10px
      padding-right 10px
      > .nb_playing, > .nb_challenges
        left 2px
  .game_menu_button
    position relative
    &::before
      content ''
      display block
      width 20px
      height 20px
      background url('../../images/game_icon.svg') no-repeat
    &.brown::before
      background url('../../images/icons/game_icon_brown.svg') no-repeat
    &.blue::before
      background url('../../images/icons/game_icon_blue.svg') no-repeat
    &.green::before
      background url('../../images/icons/game_icon_green.svg') no-repeat
    &.grey::before
      background url('../../images/icons/game_icon_grey.svg') no-repeat
    &.purple::before
      background url('../../images/icons/game_icon_purple.svg') no-repeat
    &.wood::before
      background url('../../images/icons/game_icon_wood.svg') no-repeat
    &.wood2::before
      background url('../../images/icons/game_icon_wood2.svg') no-repeat
    &.wood3::before
      background url('../../images/icons/game_icon_wood3.svg') no-repeat
    &.blue3::before
      background url('../../images/icons/game_icon_blue3.svg') no-repeat
    &.canvas::before
      background url('../../images/icons/game_icon_canvas.svg') no-repeat
    &.metal::before
      background url('../../images/icons/game_icon_metal.svg') no-repeat
    & > .chip
      position absolute
      font-size 10px
      font-weight bold
      line-height 12px
      letter-spacing 0px
      color bgdark
      border 2px solid bgdark
      border-radius 50%
      height 17px
      width 17px
      top 10px
      left 7px
    & > .nb_playing
      background lighten(gold, 50%)
    & > .nb_challenges
      left 7px
      background orange
    &.new_challenge:before
      background transparent
      font-family: "lichess" !important;
      content: "U";
      font-style: normal !important;
      font-weight: normal !important;
      font-variant: normal !important;
      text-transform: none !important;
      speak: none;
      line-height: 1;
      -webkit-font-smoothing: antialiased;
      animation: neon 1.5s ease-in-out infinite alternate
  @media only screen and (min-width 600px)
    .friends_button
      padding-right 15px
      margin-right 5px
      + .game_menu_button
        padding-left 15px
        padding-right 15px

.main_header, .main_footer
  section
    height 50%
    padding 0 10px

.content
  width 100%
  height 100%
