.view-container
  position absolute
  display block
  overflow hidden
  width 100%
  height 100%

main
  position absolute
  height 100%
  width 100%
  background bgdark
  color textLightGray
  overflow hidden

.menu-close-overlay
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  z-index 2
  background rgba(0,0,0,0.5)
  visibility hidden

main.out
  .menu-close-overlay
    visibility visible
  .game_menu_button
    display none

.main_header
  background #151a1e
  height 50px
  &.board
    background inherit
  nav
    max-height 50px
    overflow hidden
    h1
      font-size 1.1em
      text-align center
      width 69%
      margin 0 auto
      line-height 50px
      color gold
      &.playing
        text-transform none
      &.reconnecting
        white-space nowrap
        overflow hidden
        text-align center
        height 50px
    button
      width 15%
      max-width 50px
      background transparent
      padding: 15px 15px
      margin 0
      color gold
      font-size 20px
      line-height 20px
  .menu_button, .back_button
    float left
  .back_button
    font-size 1.1em
    max-width none
    width 70%
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    text-align left
    > span.fa
      font-size 18px
    &:before
      margin-right 10px
  .game_menu_button
    position relative
    float right
    &::before
      content ''
      display block
      width 20px
      height 20px
      background url('../../images/game_icon.svg') no-repeat
    &.brown::before
      background url('../../images/icons/game_icon_brown.svg') no-repeat
    &.blue::before
      background url('../../images/icons/game_icon_blue.svg') no-repeat
    &.green::before
      background url('../../images/icons/game_icon_green.svg') no-repeat
    &.grey::before
      background url('../../images/icons/game_icon_grey.svg') no-repeat
    &.purple::before
      background url('../../images/icons/game_icon_purple.svg') no-repeat
    &.wood::before
      background url('../../images/icons/game_icon_wood.svg') no-repeat
    &.wood2::before
      background url('../../images/icons/game_icon_wood2.svg') no-repeat
    &.wood3::before
      background url('../../images/icons/game_icon_wood3.svg') no-repeat
    &.blue3::before
      background url('../../images/icons/game_icon_blue3.svg') no-repeat
    &.canvas::before
      background url('../../images/icons/game_icon_canvas.svg') no-repeat
    &.metal::before
      background url('../../images/icons/game_icon_metal.svg') no-repeat
    & > .chip
      position absolute
      font-size 10px
      font-weight bold
      line-height 12px
      letter-spacing 0px
      color bgdark
      border 2px solid bgdark
      border-radius 50%
      height 17px
      width 17px
    & > .nb_playing
      top 10px
      left 7px
      background gold
    & > .nb_challenges
      top 4px
      right 4px
      border-color darken(orange, 5%)
      background orange
    &.new_challenge:before
      background transparent
      font-family: "lichess" !important;
      content: "U";
      font-style: normal !important;
      font-weight: normal !important;
      font-variant: normal !important;
      text-transform: none !important;
      speak: none;
      line-height: 1;
      -webkit-font-smoothing: antialiased;
      animation: neon 1.5s ease-in-out infinite alternate


.main_header, .main_footer
  section
    height 50%
    padding 0 10px

.content
  width 100%
  height 100%
