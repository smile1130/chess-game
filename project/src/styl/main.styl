.view-container
  position absolute
  display block
  overflow hidden
  width 100%
  height 100%

main
  position absolute
  height 100%
  width 100%
  z-index 1
  background #1c2328
  color #fff
  overflow hidden
  transition transform 250ms ease-out
  &.out
    transform translate3d(85%, 0, 0)

.menu-close-overlay
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  z-index 2
  background rgba(0,0,0,0.5)
  visibility hidden
  opacity 0
  transition opacity 250ms, visibility 0s 50ms

main.out
  .menu-close-overlay
    opacity 1
    visibility visible

.main_header
  nav
    max-height 50px
    overflow hidden
    h1
      font-size 1em
      text-align center
      width 70%
      margin 0 auto
      line-height 50px
      &.playing
        text-transform none
        color #C4A86F
      &.reconnecting
        white-space nowrap
        overflow hidden
        color #C4A86F
        text-align center
        height 50px

    button
      background transparent
      padding: 15px
      color #C4A86F
      font-size 20px
      line-height 20px
  .menu_button
    float left
  .game_menu_button
    position relative
    float right
    &::before
      content ''
      display block
      width 20px
      height 20px
      background url('../../images/game_icon.svg') no-repeat
    & > .nb_playing
      position absolute
      top 7px
      left 7px
      font-size 10px
      font-family 'montserratbold'
      line-height 14px
      letter-spacing -1px
      color #1c2328
      background #C4A86F
      border 2px solid #1c2328
      border-radius 50%
      height 17px
      width 17px

.main_header, .main_footer
  section
    height 50%
    padding 0 10px

.content
  padding 0 20px
  h2
    font-family 'montserratbold'
    margin 1em 0 1.5em 0

#login, #signup
  form
    margin-top 2em
  input
    display block
    width 80%
    margin 0 auto
    margin-top 10px
    height 50px
    background #fff
    border-radius 5px
    border 1px solid #ddd
    padding 0 15px
  button.fat
    display block
    width 80%
    background #C4A86F
    color #fff
    padding 15px
    font-size 15px
    margin 0 auto
    margin-top 20px
  .signup
    position absolute
    z-index 2
    bottom 20px
    left 0
    width 100%
    text-align center

