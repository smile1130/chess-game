.view-container
  position absolute
  display block
  overflow hidden
  width 100%
  height 100%

main
  position absolute
  height 100%
  width 100%
  z-index 1
  background #151A1E
  color #fff
  overflow hidden
  transition transform 200ms ease-out
  &.out
    transform translate3d(85%, 0, 0)

.main_header
  nav
    max-height 50px
    overflow hidden
    h1
      font-size 1em
      text-transform uppercase
      text-align center
      width 100%
      line-height 50px
      &.playing
        text-transform none
        color #C4A86F
    button
      background transparent
      padding: 15px
      color #C4A86F
      font-size 20px
      line-height 20px
  .menu_button
    float left
  .game_menu_button
    position relative
    float right
    &::before
      content ''
      display block
      width 20px
      height 20px
      background url('../../images/game_icon.svg') no-repeat
    & > .nb_playing
      position absolute
      top 7px
      left 7px
      font-size 10px
      font-family 'montserratbold'
      line-height 14px
      letter-spacing -1px
      color #151A1E
      background #C4A86F
      border 2px solid #151A1E
      border-radius 50%
      height 17px
      width 17px

.main_header, .main_footer
  section
    height 50%
    padding 0 10px

.content
  padding 0 20px
  h2
    font-family 'montserratbold'
    margin 1em 0 1.5em 0

#login_form
  margin-top 2em
  input
    display block
    width 80%
    margin 0 auto
    margin-top 10px
    height 50px
    background #fff
    border-radius 5px
    border 1px solid #ddd
    padding 0 15px
  button.login
    display block
    width 80%
    background #C4A86F
    color #fff
    padding 15px
    font-size 15px
    margin 0 auto
    margin-top 20px
