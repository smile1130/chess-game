.view-container
  position absolute
  display block
  overflow hidden
  width 100%
  height 100%

main
  position absolute
  height 100%
  width 100%
  background bgdark
  color textDarkBg
  overflow hidden

.main_header
  background headerBgDark
  height 50px
  &.board
    background inherit
  > nav
    height 50px
    overflow hidden
    display flex
    justify-content space-between
    > h1
      padding-left 5px
      text-align left
      font-size 1.1rem
      line-height 50px
      color gold
      flex 1 1 auto
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      > .kiddo
        margin-right 5px
        font-size 20px
      > .fa-trophy
        margin-right 2px
      &.reconnecting
        white-space nowrap
        height 50px
        text-align center
        &.withTitle
          text-align left
          > span
            margin-right 5px
      @media only screen and (max-width 320px)
        &.playing
          padding-left 0
          font-size 1rem
    > .buttons
      flex 0 0 auto
      > .main_header_button
        padding-left 10px
        padding-right 10px
        > .chip
          left 2px

.main_header_button
  flex 0 0 auto
  background transparent
  padding 15px 0.9rem
  margin 0
  color gold
  font-size 20px
  line-height 20px
  &.fa-bell
    position relative
    top -2px
  &.active
    background lighten(headerBgDark, 5%)

.back_button
  flex 0 1 auto
  font-size 1.1em
  height 50px
  white-space nowrap
  padding 0
  overflow hidden
  text-overflow ellipsis
  text-align left
  > .title, .fa
    display inline-block
    height 50px
    padding 15px 0 15px 10px
  > span.fa
    font-size 18px
    margin 0
    margin-right 5px
  > .title
    padding-left 0
    padding-right 15px
  &:before
    margin-right 10px
  &.active
    background lighten(headerBgDark, 5%)

.friends_button, .timeline_button, .game_menu_button
  > .chip
    position absolute
    font-size 10px
    font-weight bold
    line-height 13px
    letter-spacing 0px
    color bgdark
    border 2px solid bgdark
    border-radius 50%
    height 17px
    width 17px
    top 10px
    left 7px
    background lighten(gold, 50%)

.timeline_button
  > .chip
    font-family 'Noto Sans', sans-serif


.friends_button
  position relative
  padding-right 10px
  color gold
  &.nofriend
    color rgba(gold, 0.7)

.game_menu_button
  position relative
  &.invisible
    visibility hidden
  &::before
    content ''
    display block
    width 20px
    height 20px
    background url('../../images/icons/game_icon.svg') no-repeat
  &.brown::before
    background url('../../images/icons/game_icon_brown.svg') no-repeat
  &.blue::before
    background url('../../images/icons/game_icon_blue.svg') no-repeat
  &.green::before
    background url('../../images/icons/game_icon_green.svg') no-repeat
  &.grey::before
    background url('../../images/icons/game_icon_grey.svg') no-repeat
  &.purple::before
    background url('../../images/icons/game_icon_purple.svg') no-repeat
  &.wood::before
    background url('../../images/icons/game_icon_wood.svg') no-repeat
  &.wood2::before
    background url('../../images/icons/game_icon_wood2.svg') no-repeat
  &.wood3::before
    background url('../../images/icons/game_icon_wood3.svg') no-repeat
  &.maple::before
    background url('../../images/icons/game_icon_maple.svg') no-repeat
  &.blue3::before
    background url('../../images/icons/game_icon_blue3.svg') no-repeat
  &.canvas::before
    background url('../../images/icons/game_icon_canvas.svg') no-repeat
  &.metal::before
    background url('../../images/icons/game_icon_metal.svg') no-repeat
  > .nb_challenges
    left 7px
    background orange
  &.new_challenge:before
    background transparent
    font-family: "lichess" !important;
    content: "U";
    font-style: normal !important;
    font-weight: normal !important;
    font-variant: normal !important;
    text-transform: none !important;
    speak: none;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
    animation: neon 1.5s ease-in-out infinite alternate

@media only screen and (min-width 600px)
  .friends_button
    padding-right 15px
    margin-right 5px
    + .game_menu_button
      padding-left 15px
      padding-right 15px

.content
  width 100%
  height calc(100% - 50px)
  &.withFooter
    height "calc(100% - 50px - %s)" % footerHeight

.main_footer
  height footerHeight
