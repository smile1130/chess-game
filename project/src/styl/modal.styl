.modal
  position absolute
  top: 0;
  z-index: 11
  width: 100%;
  min-height: 100%;
  overflow: hidden;
  background-color: #fff;
  opacity: 0;
  transform translate3d(0, 100%, 0)
  transition transform 250ms, opacity 1ms 250ms
  & > header
    position absolute
    z-index 2
    top 0
    left 0
    width 100%
    height 55px
    background #fff
    color #fff
    border-bottom solid 1px #E1E1E1
    opacity 0.9
    & > h2
      text-align center
      line-height 55px
      color #383838
      font-family 'montserratregular'

.modal.show
  height 100%
  opacity 1
  transition transform 250ms
  transform translate3d(0,0,0)

.modal_close
  position absolute
  right 0
  top 0
  padding 15px
  background transparent
  font-size 24px
  color #C4A86F
  font-family 'montserratregular'
