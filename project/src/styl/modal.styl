.modal
  position absolute
  top: 0;
  z-index: 11
  width: 100%;
  min-height: 100%;
  overflow: hidden;
  background-color: #fff;
  height 100%
  opacity 1
  & > header
    position absolute
    z-index 2
    top 0
    left 0
    width 100%
    height 45px
    background #fff
    color #fff
    border-bottom solid 1px #E1E1E1
    & > h2
      text-align center
      line-height 45px
      color #383838
      font-family 'montserratregular'

.modal_close
  position absolute
  right 0
  top 0
  padding 10px
  background transparent
  font-size 24px
  line-height 25px
  height 45px
  color #C4A86F

.modal_content
  background #F5F5F5
  height 100%
  padding-top 45px
