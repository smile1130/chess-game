{
  "name": "lichess",
  "id": "org.lichess.mobileapp",
  "description": "lichess.org mobile application",
  "version": "2.1.0",
  "platforms": [
    "ios@3.8.0",
    "android@4.0.2"
  ],
  "configurations_mixins": {
    "default": {
      "id": "org.lichess.mobileapp.dev",
      "product_name": "lichess_dev",
      "product_file_name": "lichess_dev",
      "API_END_POINT": "en.l.dev",
      "SOCKET_END_POINT": "socket.en.l.dev"
    },
    "stage": {
      "id": "org.lichess.mobileapp.stage",
      "product_name": "lichess_beta",
      "product_file_name": "lichess-stage",
      "API_END_POINT": "en.lichess.org",
      "SOCKET_END_POINT": "socket.en.lichess.org",
      "beta": "3",
      "cordova": {
        "whitelist": [
          {
            "type": "access-origin",
            "origin": [
              "http://en.lichess.org"
            ]
          }
        ]
      }
    },
    "prod": {
      "id": "org.lichess.mobileapp",
      "product_name": "lichess",
      "product_file_name": "lichess-prod",
      "API_END_POINT": "en.lichess.org",
      "SOCKET_END_POINT": "socket.en.lichess.org",
      "GA_ID": "UA-7935029-3",
      "version": "2.1.0",
      "cordova": {
        "whitelist": [
          {
            "type": "access-origin",
            "origin": [
              "http://en.lichess.org"
            ]
          }
        ]
      }
    }
  },
  "configurations": {
    "ios": {
      "default": {
        "extend": "default"
      },
      "stage": {
        "extend": "stage",
        "sign": "adhoc",
        "release": true
      },
      "prod": {
        "extend": "prod",
        "id": "org.lichess.mobileapp.official"
      }
    },
    "android": {
      "default": {
        "extend": "default"
      },
      "stage": {
        "extend": "stage"
      },
      "prod": {
        "extend": "prod",
        "version_code": "200100",
        "release": true,
        "sign": "store"
      }
    }
  },
  "cordova": {
    "preferences": {
      "Orientation": "default",
      "DisallowOverscroll": false,
      "EnableViewportScale": false,
      "KeyboardDisplayRequiresUserAction": false,
      "ShowSplashScreenSpinner": false,
      "SplashScreen": "screen",
      "SplashScreenDelay": 10000,
      "KeepRunning": true,
      "StatusBarOverlaysWebView": false,
      "StatusBarBackgroundColor": "#151A1E",
      "backgroundColor": "#1c2328",
      "xwalkVersion": "org.xwalk:xwalk_core_library_beta:14+",
      "xwalkCommandLine": "--enable-viewport-meta --disable-pull-to-refresh-effect"
    },
    "whitelist": {
      "shared": [
        {
          "type": "access-origin",
          "origin": [
            "*"
          ]
        }
      ]
    }
  },
  "author": {
    "name": "Vincent Velociter",
    "email": "vincent.velociter@gmail.com",
    "href": "https://github.com/veloce/lichobile"
  },
  "check": {
    "ios": "./project/bin/check_ios.js",
    "android": "./project/bin/check_android.js"
  },
  "plugins": {
    "cordova-plugin-splashscreen": "https://github.com/apache/cordova-plugin-splashscreen.git#r2.1.0",
    "cordova-plugin-device": "cordova-plugin-device@1.0.0",
    "cordova-plugin-dialogs": "cordova-plugin-dialogs@1.1.0",
    "cordova-plugin-globalization": "cordova-plugin-globalization@1.0.0",
    "cordova-plugin-network-information": "cordova-plugin-network-information@1.0.0",
    "cordova-plugin-statusbar": "cordova-plugin-statusbar@1.0.0",
    "com.ionic.keyboard": "com.ionic.keyboard",
    "nl.x-services.plugins.insomnia": "https://github.com/EddyVerbruggen/Insomnia-PhoneGap-Plugin.git",
    "nl.x-services.plugins.toast": "https://github.com/EddyVerbruggen/Toast-PhoneGap-Plugin.git",
    "cordova-plugin-google-analytics": "cordova-plugin-google-analytics@0.7.1",
    "com.rjfun.cordova.plugin.lowlatencyaudio": "https://github.com/veloce/cordova-plugin-nativeaudio.git#old_interface",
    "nl.x-services.plugins.socialsharing": "https://github.com/EddyVerbruggen/SocialSharing-PhoneGap-Plugin.git",
    "nl.x-services.plugins.launchmyapp": {
      "uri": "https://github.com/EddyVerbruggen/LaunchMyApp-PhoneGap-Plugin.git",
      "variables": {
        "URL_SCHEME": "lichess"
      }
    },
    "cordova-plugin-inappbrowser": "cordova-plugin-inappbrowser@1.0.0",
    "cordova-plugin-whitelist": "cordova-plugin-whitelist@1.0.0",
    "cordova-plugin-crosswalk-webview": "cordova-plugin-crosswalk-webview@1.2.0"
  }
}
