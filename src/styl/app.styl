body
  font-family "Open Sans","Lucida Grande","Lucida Sans Unicode",Geneva,Verdana,Sans-Serif

#title {
  font-size: 20px;
  color: #848484;
}

.signin-out {
  display: none;
}

.player-table {
  width: 100%;
  height: 44px;
  padding: 2px;
}

.player-table > .player-info {
  position: absolute;
  top: 5px;
  left: 10px;
}

.clock {
  position: absolute;
  top: 5px;
  right: 10px;
  border: 1px solid #404040;
  border-radius: 4px;
  color: #444;
  font-size: 20px;
  font-weight: bold;
  width: 70px;
  height: 30px;
  padding-top: 3px;
  display:none;
  text-align:center;
}

.clock.on {
  background-color: #fff077;
}

.table-view-cell.extended {
  padding-right: 15px;
}

.icon:hover {
  text-decoration: none;
}

.bar-footer {
  text-align: center;
}

#ping {
  margin-top: 10px;
}

.modal .content {
  margin: 10px 3% 0;
}

.overlay {
  position: absolute;
  padding: 5%;
  display: none;
  background-color: rgba(255, 255, 255, 0.80);
  border: 1px solid #ddd;
  border-radius: 2px;
}

#cancel-seek {
  position: absolute;
  width: 85%;
  bottom: 5%;
}

.waiting, .his {
  display: none;
}

#inGameOverlay .mine {
  display: inline-block;
}

#chat {
  width: 100%;
  height: 100%;
}

#chat-scroller {
  position: absolute;
  top: 0;
  border: 1px solid #ddd;
  overflow: hidden;
  width: 100%;
}

.chat-message {
  margin: 0;
  padding: 4px 2px;
  border-bottom: 1px solid #ddd;
}

.chat-user {
  font-weight: bold;
  margin-right: 3px;
}

.talk-form {
  position: absolute;
  bottom: 5px;
  width: 100%;
  height: 34px;
}

.talk-form > button {
  height: 34px;
}

#chat > .talk-form > .talk-input {
  height: 100%;
  width: 83%;
}
