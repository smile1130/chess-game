// http://www.colourlovers.com/palette/940086/mystery_machine
// $bg-base = rgb(85,66,54)
// $bg-var1 = rgb(247,120,37)
// $bg-var2 = rgb(211,206,61)
// $bg-var3 = rgb()

// http://www.colourlovers.com/palette/292482/Terra
$color-bg1 = rgb(3,54,73)
$color-bg2 = rgb(3,22,52)
$color-var1 = rgb(205,179,128)
$color-text = #aec3cb

body
  font-family "Open Sans", "Lucida Grande", "Lucida Sans Unicode", Geneva, Verdana, Sans-Serif
  background $color-bg1
  color $color-text

a
  color #fff
  opacity 0.7

#title
  font-size 20px
  color #848484
  background $color-bg2
  color $color-text

#mainPage
  background url(../../images/bg1.png)
  color $color-text

.bar-tab
  background $color-bg2
  color $color-text
  border none
  .tab-item
    color $color-text

.signin-out
  display none

.player-table
  width 100%
  height 44px
  padding 2px
  & > .player-info
    position absolute
    top 5px
    left 10px

.clock
  position absolute
  top 5px
  right 10px
  border 1px solid #404040
  border-radius 4px
  color #444
  font-size 20px
  font-weight bold
  width 70px
  height 30px
  padding-top 3px
  display none
  text-align center
  &.on
    background-color #fff077

.table-view-cell
  &.extended
    padding-right 15px

.icon
  &:hover
    text-decoration none

#ping
  margin-top 10px

.modal
  .content
    margin 10px 3% 0

.overlay
  position absolute
  padding 5%
  display none
  background-color rgba(255, 255, 255, 0.80)
  border 1px solid #ddd
  border-radius 2px

#cancel-seek
  position absolute
  width 85%
  bottom 5%

.waiting,
.his
  display none

#inGameOverlay
  .mine
    display inline-block

#chat
  width 100%
  height 100%
  & > .talk-form
    & > .talk-input
      height 100%
      width 83%

#chat-scroller
  position absolute
  top 0
  border 1px solid #ddd
  overflow hidden
  width 100%

.chat-message
  margin 0
  padding 4px 2px
  border-bottom 1px solid #ddd

.chat-user
  font-weight bold
  margin-right 3px

.talk-form
  position absolute
  bottom 5px
  width 100%
  height 34px
  & > button
    height 34px

