@font-face
  font-family "lichess"
  src url("../../fonts/lichess.woff") format("woff")
  font-weight normal
  font-style normal

// http://www.colourlovers.com/palette/110225/Vintage_Modern
// $bg-base = rgb(140, 35, 24)
// $bg-var1 = rgb(94, 140, 106)
