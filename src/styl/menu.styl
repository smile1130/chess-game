#side_menu
  position fixed
  top 0
  bottom 0
  min-height 100%
  max-height 100%
  width 80%
  background #353535
  color #DFDFDF
  min-height 100vh
  overflow hidden
  z-index 0
  section
    padding 0 15px
  header
    background #2A2A2A
    box-shadow 0px 1px 2px 0px rgba(0,0,0,0.30)
    color #C4A86F
    font-size 17px
    text-align center
    .logo
      background url(../../images/pieces/mono/N.svg) no-repeat center center
      margin 0 auto
      height 80px
      width 100%
    h2
      clear both
      line-height 1.5em
      text-transform uppercase
      font-weight normal
      color #FFF
    button.settings
      padding 15px
      background none
      float left
      color #c4a86f;
      width 15%;
      display inline-block;
      font-size 1em;
  h3
    text-transform uppercase
    color #fff
    font-weight normal
    margin 40px 0px 30px 0

#settings
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background #2A2A2A
  z-index 2
  visibility hidden
  padding 0
  &.show
    visibility visible
  header
    button
      float left
      padding 15px
      background none
      float left
      color #c4a86f;
      width 15%;
      display inline-block;
      font-size 1em;
    h2
      display inline-block
      padding 15px 0
      color #C4A86F
  section
    padding 20px 10px 0
    font-size 0.9em
    .check_container
      margin-bottom 20px
      label
        width 65%

