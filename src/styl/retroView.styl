.analyse-retro_box
  position absolute
  bottom 0
  left 0
  height 100%
  width 100%
  display flex
  flex-flow column nowrap
  &.minimized
    height 28px
  > .titleWrapper
    flex 0 0 28px
    background-color darkBlue
    color headerBgDarkColor
    display flex
    flex-flow row nowrap
    justify-content space-between
    align-items center
    padding-left 10px
    > div
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
    > .mistakeNb
      flex 0 0 50px
      text-align center

.retro-feedback
  height initial
  flex 1 1 auto
  display flex
  flex-flow column nowrap
  justify-content center
  &.fail
    .retro-icon:not(.off)
      color red

.retro-player
  display flex
  flex-flow row wrap
  align-items center
  margin 0 1em
  > .piece-no-square
    flex 0 0 64px
  @media only screen and (orientation: landscape)
    flex-flow column nowrap
    > .piece-no-square
      margin-bottom 2vmin


.retro-instruction
  display flex
  flex-flow column nowrap

  > strong
    font-size 1.1em

  > .choices
    margin-top 1em
    display flex
    flex-flow column nowrap
    align-items flex-start

    > button
      padding 0.5em 0

.retro-half
  width 100%
  flex 1 1 50%
  display flex
  justify-content center
  align-items center

.retro-continue
  display flex
  font-size: 1.3em;
  background: rgba(56,147,232,0.8);
  color: #fff;
  align-items: center;
  justify-content: center;
  text-transform: uppercase;
  padding: 0 10px;
  > i
    margin-right 0.5em

.retro-icon
  display: block;
  width: 64px;
  height: 64px;
  margin-right: 10px;
  font-size: 50px;
  font-size: 64px;
  line-height: 64px;
  text-align: center;

.retro-progress
  margin-top: 5px;
  opacity: 0.8;
  width: 100%;
  height: 4px;
  background: #ddd;
  > div
    background: #759900;
    height: 4px;
    transition: width 0.5s;
    max-width: 100%;

.retro-actions
  flex 0 0 auto
  display flex


.view-container.light
  .analyse-retro_box
    background #fff
    > .titleWrapper
      background-color blue
      color #fff

.view-container.transp
  .analyse-retro_box
    background-color #f5f5f5
    color textDarkGray
    > .titleWrapper
      background-color rgba(#000, 0.9)
    index
     color textDarkGray
