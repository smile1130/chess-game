.analyse-training_feedback
  &.fail
    .retro-icon:not(.off)
      color red

.retro-instruction
  display flex
  flex-flow column nowrap

  > strong
    font-size 1.1em

  > .choices
    margin-top 1em
    display flex
    flex-flow column nowrap
    align-items flex-start

    > button
      padding 0.5em 0

.retro-half
  width 100%
  flex 1 1 50%
  display flex
  justify-content center
  align-items center

.retro-continue
  display flex
  font-size: 1.3em;
  background: rgba(56,147,232,0.8);
  color: #fff;
  align-items: center;
  justify-content: center;
  text-transform: uppercase;
  padding: 0 10px;
  > i
    margin-right 0.5em

.retro-icon
  display: block;
  width: 64px;
  height: 64px;
  margin-right: 10px;
  font-size: 50px;
  font-size: 64px;
  line-height: 64px;
  text-align: center;

.view-container.light
  .analyse-retro_box
    background #fff
    > .titleWrapper
      background-color blue
      color #fff

.view-container.transp
  .analyse-retro_box
    background-color #f5f5f5
    color textDarkGray
    > .titleWrapper
      background-color rgba(#000, 0.9)
    index
     color textDarkGray
