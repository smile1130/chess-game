.forecasts-wrapper
  flex 1 1 auto
  position relative
  > .add
    width 100%
    display flex
    flex-flow row nowrap
    align-items center
    &::before
      opacity 0.6
      margin-right 0.3em
      font-size 2em
    &.enabled::before
      font-size 2.5em
      color green
    padding 12px
  sans
    display flex
    flex-flow row wrap
    align-items center
    > move
      padding-left 0
      > index
        margin-left 0
  san
    padding-left 0.17em
    padding-right 0.17em
  index
    margin-left 0.17em
  .on-my-turn
    text-align center
    margin-top: 0.17em
  .spinner_overlay
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    display flex
    align-items center
    justify-content center
    background rgba(0, 0, 0, 0.4)
    > .spinner
      margin 22px 0 0
      width initial
      height initial
      font-size 25px

.forecasts-list
  width 100%
  &.displayPieces
    move
      font-family ChessSansPiratf
  .forecast
    border-bottom 1px solid lighten(bgdark, 15%)
    &::before
      margin-left -.6em
      opacity 0.5
    font-size 1.2em
    padding 0.5em
    display flex
    flex-flow row nowrap
    align-items center

    move
      padding 0

    .delete
      font-size 1.2em
      position absolute
      right 0
      color red

.overlay_popup.displayPieces
  header
    font-family ChessSansPiratf

.view-container
  &.transp, &.light
    .forecast
      border-bottom-color darken(bglight, 8%)

.view-container.transp
  .analyse-forecast_box
    > .titleWrapper
      background-color rgba(#000, 0.9)
    move
      color textDarkGray
    index
      color rgba(textLightBg, 50%)

.view-container.light
  .analyse-forecast_box
    > .titleWrapper
      background-color blue
      color #fff
