.forecasts-wrapper
  flex 1 1 auto
  position relative
  .info
    padding 12px
  san
    padding-left 0.17em
    padding-right 0.17em
  index
    margin-left 0.17em
  .on-my-turn
    text-align center
    margin-top: 0.17em
  .spinner_overlay
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    display flex
    align-items center
    justify-content center
    background rgba(0, 0, 0, 0.4)
    > .spinner
      margin 22px 0 0
      width initial
      height initial
      font-size 25px

.forecasts-list
  width 100%
  &.displayPieces
    move
      font-family ChessSansPiratf
  .forecast
    &::before
      margin-left -.6em
    &:nth-child(even)
      background-color lighten(bgdark, 15%)
    font-size 14px
    padding 0.25em 0 0.25em 0.5em
    display flex
    align-items center

    &.add-forecast
      background lighten(bgdark, 20%)
      padding-top 0.25em
      padding-bottom 0.25em

    move
      padding 0

    .delete
      position absolute
      right 0
      color red

.overlay_popup.displayPieces
  header
    font-family ChessSansPiratf

.view-container
  &.transp, &.light
    .forecast
      &:nth-child(even)
        background-color themeBgLight

.view-container.transp
  .analyse-forecast_box
    > .titleWrapper
      background-color rgba(#000, 0.9)
    move
      color textDarkGray
    index
      color rgba(textLightBg, 50%)
    .forecast.add-forecast
      background darken(bglight, 20%)

.view-container.light
  .analyse-forecast_box
    > .titleWrapper
      background-color blue
      color #fff
