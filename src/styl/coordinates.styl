#main-wrap
  --main-max-width: calc(100vh - calc(var(--site-header-height) + var(--site-header-margin)) - 3rem)

@media (min-width: 980px)
  #main-wrap
    --main-max-width: auto

.coord-trainer
  grid-area: main
  display: grid
  overflow: hidden
  grid-template-areas: "board" "progress" "score" "table" "side"
  grid-row-gap: 2vmin

.coord-trainer__side
  grid-area: side

.coord-trainer__board
  grid-area: board

.coord-trainer__table
  grid-area: table

.coord-trainer__progress
  grid-area: progress

.coord-trainer__score
  grid-area: score

@media (min-width: 980px)
  .coord-trainer
    grid-template-columns: minmax(calc(70vmin * var(--board-scale)), calc(100vh * var(--board-scale) - calc(var(--site-header-height) + var(--site-header-margin)) - 3rem)) 2vmin minmax(240px, 400px)
