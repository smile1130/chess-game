.coord-trainer__colorChoice
  > .action_bar_button
    background-position: center center
    background-size: 30px 30px
    background-repeat: no-repeat
    &.selected
      background-color: orange
  > .white
    background-image: url(../../images/pieces/cburnett/wK.svg)
  > .black
    background-image: url(../../images/pieces/cburnett/bK.svg)
  > .random
    background-image: url(../../images/icons/wbK.svg)

.coord-trainer__board_wrapper
  position relative
  @media only screen and (orientation: landscape)
    .playable_board_wrapper
      height: calc(var(--board-side-land) - 10px)
      width: calc(var(--board-side-land) - 10px)

.coord-trainer__coords
  > .next_coord
    display flex
    z-index: 2
    justify-content: center
    align-items: center
    position: absolute
    left: 0
    width: 100%
    height: 100%
    font-size: 180px
    font-weight: bold
    pointer-events: none
    user-select: none
    color: #eee
    text-shadow: 0 10px 10px #444
    opacity: 0.7
    transition: all 150ms
    &.nope
      color: #cc3333 !important
    &.coord1
      color: #fff
    &.coord2
      left: 30%
      top: 10%
      font-size: 60px
      opacity: 0.4
    &.coord3
      transition: none
      left: 44%
      top: 13%
      font-size: 28px
      opacity: 0.2

.training-table.coord-trainer__table
  padding 0
  justify-content space-around
  align-items center

.coord-trainer__table .explanation li
  list-style: outside disc
  margin: 0.5em 0 0.5em 1em

.coord-trainer__score
  display flex
  justify-content: center
  align-items center
  font-family 'Roboto'
  font-weight: bold
  font-size: 4em
  width 100px
  height 100px
  background-color: #629924
  color: #fff
  border-radius 3px
  &.nope
    background-color: #cc3333

.coord-trainer__progress
  @media only screen and (orientation: portrait) and (min-width 768px) and (min-height 768px)
    width 94vw
    margin auto
  @media only screen and (orientation: landscape) and (min-width 768px) and (min-height 768px)
    margin-left 3vh

.coord-trainer__progress_bar
  width: 100%
  height: 10px
  background-color: #629924
  &.nope
    background-color: #cc3333
