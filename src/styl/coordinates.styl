  text-align: center

.coord-trainer .box p
  margin-top: 1em

.coord-trainer form.color
  margin-top: 2vmin

.coord-trainer form.color .color i
  display: block
  width: 30px
  height: 30px
  background-size: 30px 30px
  background-repeat: no-repeat
  padding: 0

.coord-trainer form.color .color_1 i
  background-image: url(../../images/pieces/cburnett/wK.svg)

.coord-trainer form.color .color_2 i
  background-image: url(../../images/icons/wbK.svg)

.coord-trainer form.color .color_3 i
  background-image: url(../../images/pieces/cburnett/bK.svg)

.coord-trainer .next_coord
  z-index: 2
  justify-content: center
  position: absolute
  bottom: 20%
  left: 0
  width: 90%
  height: 100%
  font-size: 180px
  font-weight: bold
  pointer-events: none
  color: #eee
  text-shadow: 0 10px 10px #444
  opacity: 0.7
  transition: all 150ms

.coord-trainer .next_coord.nope
  color: #cc3333 !important

.coord-trainer #next_coord0
  color: #fff

.coord-trainer #next_coord1
  left: 26%
  font-size: 75px
  opacity: 0.7

.coord-trainer #next_coord2
  transition: none
  left: 38%
  font-size: 38px
  opacity: 0.4

.coord-trainer #next_coord1,
.coord-trainer #next_coord2,
.coord-trainer #next_coord0
  user-select: none

.coord-trainer .progress_bar
  width: 100%
  height: 10px
  background-color: #629924

.coord-trainer__table
  justify-content: space-around

.coord-trainer__table .explanation li
  list-style: outside disc
  margin: 0.5em 0 0.5em 1em

.coord-trainer__score
  justify-content: center
  font-weight: bold
  font-size: 70px
  margin: auto
  width: 110px
  height: 110px
  line-height: 110px
  background-color: #629924
  color: #fff
  transition: all 150ms

.coord-trainer.wrong .progress_bar,
.coord-trainer.wrong .coord-trainer__score
  background-color: #cc3333

.coord-trainer.play .start,
.coord-trainer #next_coord,
.coord-trainer.play form.color
  display: none

.coord-trainer.play #next_coord
  display: block

@media (max-width: 979px)
  .coord-trainer.init .coord-trainer__score
    display: none

  .coord-trainer.init .explanation
    order: 2
    margin-top: 1em

.coord-trainer.init .coord-trainer__score
  opacity: 0

.coord-trainer.init form.color
  margin-bottom: 2vmin

