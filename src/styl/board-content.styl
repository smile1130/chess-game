.content_round
  flex 1 1 auto
  display flex
  flex-flow column nowrap
  @media only screen and (orientation: landscape)
    display flex
    flex-flow row nowrap

.table
  flex 1 1 auto
  @media only screen and (orientation: landscape) and (aspect-ratio 4/3), (orientation: landscape) and (device-aspect-ratio 4/3), (orientation landscape) and (device-aspect-ratio 3/4)
    margin auto 0

.game_board_wrapper, .board_wrapper
  @media only screen and (orientation: portrait)
    height 100vw
    width 100vw
    &.halfsize
      height 'calc((100vh - %s) / 2)' % headerHeight
      width 'calc((100vh - %s) / 2)' % headerHeight
      align-self center
  @media only screen and (orientation: portrait) and (aspect-ratio 3/4), (orientation: portrait) and (device-aspect-ratio 3/4)
    height 98vw
    width 98vw
    margin 0 auto
  @media only screen and (orientation: landscape)
    height 'calc(100vh - %s)' % headerHeight
    width 'calc(100vh - %s)' % headerHeight
    flex 0 0 auto
  @media only screen and (orientation: landscape) and (aspect-ratio 4/3), (orientation: landscape) and (device-aspect-ratio 4/3), (orientation landscape) and (device-aspect-ratio 3/4)
    height 'calc(100vh - %s - 12vh)' % headerHeight
    width 'calc(100vh - %s - 12vh)' % headerHeight
    flex 0 0 auto
    margin auto 0

  > svg
    overflow: hidden;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    opacity: 0.6;
    > image
      opacity 0.5

  > svg *
    transition: 0.3s;

.game_board_wrapper
  position relative

.display_board
  width 100%
  height 100%

.player_bar
  display flex
  flex-flow row nowrap
  justify-content space-between
  flex 0 0 auto
  font-size 0.9em
  color rgba(textDarkBg, 0.7)
  > .info
    display: flex;
    flex-flow: row nowrap;
    flex: 1 1 auto;
    overflow: hidden;
    text-overflow: ellipsis;
    padding-right 10px
    > .name
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
    > .result
      padding 0 5px
      margin-right 5px
      border-right 1px solid borderColor
  > .player_bar_clock
    flex 0 0 auto
  &.halfsize
    width 'calc((100vh - %s) / 2)' % headerHeight
    align-self center

.table
  display flex
  flex-flow column nowrap
  > header
    flex 0 0 auto
  > .playersTable
    padding 0 10px
    flex 1 1 auto
    display flex
    flex-flow column nowrap
    justify-content space-around
  @media only screen and (max-height 400px) and (orientation landscape)
    font-size 0.7rem
    > .tableHeader
      > .icon-game
        font-size 20px
        vertical-align bottom
      > .game-title
        font-size 0.6rem
        line-height 14px
    > .playersTable
      justify-content space-around
    .playTable
      padding-left 0
    .clock
      font-size 20px
      &.correspondence
        font-size 15px
  @media only screen and (orientation: landscape) and (min-width 801px)
    .clock
      font-size 25px
      max-width 120px
    .antagonistInfos
      max-width calc(100% - 120px)
      > .antagonistUser
        font-size 1rem
  @media only screen and (orientation: landscape) and (min-width 1025px)
    .clock
      font-size 35px
      max-width 160px
    .antagonistInfos
      max-width calc(100% - 160px)

.board_alert
  position: absolute;
  bottom: -28px;
  left: 0;
  height: 28px;
  width: 100%;
  text-align: center;
  padding: 5px 0;
  font-weight: bold;
  font-size 0.8em
  color: #fff;
  overflow hidden
  text-overflow ellipsis
  background: rgba(orange, 0.8)
  z-index: 50;
