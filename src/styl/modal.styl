.modal
  position absolute
  top 0
  left 0
  z-index 111
  width 100%
  height 100%
  min-height 100%
  overflow hidden
  background-color #fff
  > header
    position absolute
    z-index 112
    // ios hack
    transform translateZ(0)
    top 0
    left 0
    width 100%
    height headerHeight
    background #fff
    border-bottom solid 1px #E1E1E1
    > h2
      text-align center
      line-height headerHeight
      color textDarkGray

.modal_close
  position absolute
  right 0
  top 0
  padding 10px
  background transparent
  font-size 24px
  line-height 22.5px
  height headerHeight
  color gold

.modal_content
  background bglight
  color textDarkGray
  height 100%
  padding-top headerHeight
  overflow-y auto
  -webkit-overflow-scrolling touch
  p
    margin 1em 15px 0
