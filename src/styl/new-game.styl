.game_form_popup
  background bglight
  > .popup_content
    padding 0

.new_game_form_popup
  align-self flex-start
  margin-top 20%

.game_form
  fieldset
    padding 0px 20px
  .check_container
    margin-top 15px

button.newGameButton
  width 100%
  height 45px
  border-radius 0 0 5px 5px
  margin 20px 0 0
  background gold
  color #FFF
  font-size 0.85em
  text-transform uppercase
  &[data-icon=E]:before
    color #fff
  &:before
    margin-right 10px
  &.active
    background lighten(gold, 10%)
  > .fa-hourglass-half
    font-size 20px

.rating_range
  margin-top 10px
  .select_input
    margin-top 5px
    select
      padding-left 60px

.setupPosition
  display flex
  justify-content center
  margin-top 10px

.setupMiniBoardWrapper
  width 100px
  height 100px

.newGame-preset_switch
  > .nice-radio
    > input.radio + label
      text-align center
      padding 0
      &:after
        content none

.newGame-pools
  display flex
  flex-flow row wrap
  justify-content space-between
  padding 20px

.newGame-pool
  height 80px
  flex 0 0 31%
  background rgba(255,255,255,0.7)
  box-shadow: 0px 1px 2px 0px rgba(0,0,0,0.1);
  display flex
  flex-flow column
  justify-content center
  align-items center
  margin-bottom 10px
  padding 5px 0
  color textMediumGray
  opacity 1
  transition opacity 0.5s
  &.on
    background #fff
    box-shadow 0 2px 5px rgba(0,0,0,0.3)
  &.transp
    opacity 0.6

.newGame-clock
  font-size 22px
  letter-spacing 3px

.newGame-perf
  font-size 14px
  text-transform capitalize

