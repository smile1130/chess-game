.overlay
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  background rgba(0,0,0,0.8)
  color #ffffff
  .overlay-close
    position absolute
    right 7px
    top 8px
    background transparent
    z-index 100
    font-size 50px
    color #C4A86F
    line-height 50px
    transform rotate(45deg)
    transform rotate(45deg)

.overlay2
  background rgba(0,0,0,0.6)

.overlay-content
  position relative
  top 50%
  transform translateY(-50%)
  text-align center

.overlay-effect
  opacity 0
  visibility hidden
  transition opacity 200ms, visibility 0s 200ms

.overlay-effect.open
  opacity 1
  visibility visible
  transition opacity 200ms
