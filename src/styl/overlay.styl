.overlay
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  background rgba(0,0,0,0.8)
  color #ffffff

.overlay-close
  position absolute
  right 7px
  top 8px
  background transparent
  z-index 100
  font-size 50px
  color #C4A86F
  line-height 50px
  transform rotate(45deg)
  transform rotate(45deg)

.overlay-content
  position relative
  top 50%
  transform translateY(-50%)
  text-align center
  button
    background none
    color #C4A86F
    text-align center
    text-transform uppercase
    font-size 0.9em
    margin 1em 0
    &:before
      content attr(data-icon)
      display inline-block
      width 40px
      height 40px
      line-height 40px
      color #C4A86F
      border-radius 50%
      background #fff
      margin-right 10px
    &:active
      &:before
        background #C4A86F
        color #fff

.overlay-effect
  opacity 0
  visibility hidden
  transition opacity 200ms, visibility 0s 200ms

.overlay-effect.open
  opacity 1
  visibility visible
  transition opacity 200ms
