  margin-top 2em
  input
    display block
    width 80%
    margin 0 auto
    margin-top 10px
    height 50px
    background #fff
    border-radius 5px
    border 1px solid #ddd
    padding 0 15px

.signup
  margin-top 40px
  padding 0 10px
  text-align center
  >a
    color gold
    text-decoration underline

.reset
  margin-top 40px
  padding 0 10px
  text-align center
