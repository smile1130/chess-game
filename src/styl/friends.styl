.onlineFriends
  height 50%
  > header
    > span
      font-weight bold
  > .popup_content
    overflow-y auto
    -webkit-overflow-scrolling touch
    border-radius 0 0 5px 5px
    .list_item
      border-bottom-color #eee
      display flex
      justify-content space-between
      > .friends-name
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
    .friend_tv
      font-size 20px
      color green
    > .nofriend
      width 100%
      height 100%
      display flex
      align-items center
      justify-content center
  @media only screen and (min-height 700px)
    height 40%
