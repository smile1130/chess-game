.view-container
  position absolute
  display block
  overflow hidden
  width 100%
  height 100%

main
  position absolute
  height 100%
  width 100%
  z-index 1
  background #fff
  overflow hidden
  transition transform 200ms ease-out
  box-shadow: -4px 0px 5px rgba(0, 0, 0, 0.3)
  &.out
    transform translate3d(80%, 0, 0)

.main_header
  background url('../../images/pattern_black.jpg')
  color #fff
  nav
    height 50%
    h1
      font-size 1em
      text-transform uppercase
      text-align center
      width 70%
      display inline-block
      &.playing
        text-transform none
        color #C4A86F
    button
      background transparent
      padding: 20px 10px
      &.fa
        color #C4A86F
        width 15%
        display inline-block
        font-size 1.4em

.main_header, .main_footer
  section
    height 50%
    padding 0 10px
