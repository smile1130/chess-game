.analyseSettings
  label[for='showComments']
    text-transform capitalize

.analyse-table, .explorerTable
  flex 1 1 auto
  display flex

.analyse-tableWrapper
  margin-top 5px
  flex 1 1 auto
  display flex
  flex-flow column nowrap

.analyse-table
  flex-flow column nowrap
  font-size 0.9em

.analyse-tabsContent
  flex 1 1 auto
  > .tab-content
    // must not have height (don't ask me why)
    height initial

.analyse_actions_bar
  flex 0 0 40px
  display flex
  padding 0
  height initial
  width 100%
  overflow hidden
  background lighten(bgdark, 7%)

.analyse-infosBox
  flex 1 1 40%
  display flex
  flex-flow column nowrap
  > .native_scroller
    flex 1 1 auto

.analyse-loadingReplay
  flex 1 1 auto
  display flex
  justify-content center
  align-items center
  > .spinner
    width 40px
    height 40px

.analyse-replay
  position relative
  font-size 0.9rem
  white-space normal
  line-height 1.05em
  &.displayPieces
    move
      font-family ChessSansPiratf
  @media only screen and (orientation: landscape) and (max-height 450px)
    font-size 0.7em

.analyse-openingBox
  line-height 25px
  padding 0 4px
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size 0.75em
  background lighten(bgdark, 5%)

.analyse-moveList
  padding 5px
  white-space normal

index
  color rgba(textDarkBg, 70%)
  margin-right 0.2em

move
  display inline-block
  padding: 0.25em 0.17em
  overflow hidden
  white-space nowrap
  color #aaa
  &.current, &.active
    border-radius 3px
  &.current
    color #fff
    background rgba(blue, 0.8)
    font-weight normal
    > index
      color #fff
  &.active
      background lighten(bgdark, 10%)

glyph
  font-size 0.85em
  margin-left 0.2em

eval
  text-align right
  font-size 0.65em
  font-weight lighter
  color rgba(textDarkBg, 75%)

interrupt
  font-size 0.8em

lines
  display block
  border-left 2px solid rgba(textDarkBg, 80%)

line
  display block
  padding-left 7px
  &:before
    margin-top: 0.75em
    margin-left -7px
    content: ' '
    border-top: 2px solid rgba(textDarkBg, 80%)
    position: absolute
    width: 6px
    height: 6px
  &.visiting
    white-space normal
  > move
    color textDarkBg
  > .nested
    margin-left 5px

inline
  display: inline;
  font-style: italic;
  font-size: 0.9em;
  opacity: 0.8;
  &:before, &:after
    vertical-align 45%
  &:before
    content: '(';
    margin-left: 2px;
  &:after
    content: ')';
    margin-right: 2px;

comment
  font-size 0.8em
  color rgba(textDarkBg, 90%)
  margin 0 0.2em 0 0.1em
  word-wrap break-word
  vertical-align 45%

.analyse_variant_selector
  width 100%
  height 36px
  margin 0
  padding 0
  padding-left 5px
  background bgdark
  box-shadow none
  color #8a8a8a
  > select
    padding-left 30px
    font-size 0.9em
  > label
    > i
      color gold
      font-size 20px

.analyse-header
  flex 0 0 25px
  overflow hidden
  display flex
  flex-flow row nowrap
  align-items center
  align-content center
  background lighten(bgdark, 7%)

.analyse-tabs
  flex 1 1 auto
  display flex
  flex-flow row nowrap
  align-items center
  justify-content space-between
  font-size 0.9em
  color #aaa
  min-width 0 // fix white-space nowrap
  > .tab-title
    flex 1 1 auto
    padding 0 0.5em
    overflow hidden
    white-space nowrap
    > div
      overflow hidden
      text-overflow ellipsis
  > .tabs-navigation
    flex 0 0 auto
    height 25px
    > .tab-button
      padding 0 0.5em
      height 25px

.analyse-engine_info
  flex 1 0
  font-size 0.65em
  padding 3px
  overflow hidden
  opacity 0.8
  > p
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

.analyse-curEval
  flex 0 0 auto
  min-width 45px
  color #aaa
  font-weight bold
  font-family Cousine
  height 25px
  line-height 25px
  background lighten(bgdark, 12%)
  text-align center
  > .spinner
    width initial
    height initial
    font-size 16px
    padding 0
    margin 0
    text-align center
  @media only screen and (orientation: landscape) and (max-height 450px)
    min-width 50px
    font-size 16px
    > .spinner
      font-size 14px

.analyse-bestMove
  font-size 0.5rem
  opacity 0.8
  font-weight normal
  line-height 1.2

.analyse-gameInfos
  padding 2em 1em

.analyseGameInfosWrapper
  display flex
  border-bottom 1px solid lighten(bgdark, 15%)

.analyse-gameInfos
  display flex
  flex-flow column wrap
  justify-content flex-start
  align-items center
  > .gameInfos
    font-size 0.9em
  > .status
    font-size 0.9em
    margin-top 5px

.analyseOpponent
  text-align left
  margin-bottom 0.5em
  > .pocket
    width 100%
    height calc(40vw / 6 + 10px)
    > piece
      width calc(40vw / 6)
      height calc(40vw / 6)
      &:after
        padding: 3px 5px 4px 5px;
        font-weight: bold;
        border-radius: 1px;
        font-size: 10px;
        line-height: 10px;
        padding: 1px 2px 2px 2px;
  @media only screen and (orientation portrait) and (min-width 600px)
    > .pocket > piece:after
      font-size 18px
      line-height 18px
      padding 2px 3px 3px 3px
  @media only screen and (orientation: landscape)
    > .pocket
      height 'calc(((100vw - 100vh - %s) * 40 / 100) / 6 + 10px)' % headerHeight
      max-width initial
      > piece
        width 'calc(((100vw - 100vh - %s) * 40 / 100) / 6 + 10px)' % headerHeight
        height 'calc(((100vw - 100vh - %s) * 40 / 100) / 6 + 10px)' % headerHeight
  @media only screen and (orientation: landscape) and (aspect-ratio 4/3), (orientation: landscape) and (device-aspect-ratio 4/3), (orientation landscape) and (device-aspect-ratio 3/4)
    > .pocket
      height 'calc(((100vw - (100vh - %s - 12vh)) * 40 / 100) / 6 + 10px)' % headerHeight
      > piece
        width 'calc(((100vw - (100vh - %s - 12vh)) * 40 / 100) / 6 + 10px)' % headerHeight
        height 'calc(((100vw - (100vh - %s - 12vh)) * 40 / 100) / 6 + 10px)' % headerHeight

.analyseClock
  font-family Cousine
  font-size 0.9em
  > span
    margin-left 5px

.analysePlayerName
  overflow hidden
  text-overflow ellipsis

.variationMenuPopup
  font-size 1rem
  height 100px
  top calc((100% - 100px) / 2)
  border-radius 5px
  text-align center
  .variationMenu
    display flex
    flex-flow column nowrap
    justify-content center
    height 100%

.explorerTable
  height 100%
  width 100%
  position relative
  overflow-x: hidden;
  white-space: nowrap;
  display flex
  flex-flow column nowrap
  > div
    width 100%
  .empty
    text-align: center;
  .spinner_overlay
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display flex
    align-items center
    justify-content center
    visibility hidden
    > .spinner
      margin 22px 0 0
      width initial
      height initial
      font-size 25px
  tbody, > .message
    transition: opacity 0.13s;
  th, .title
    color #ccc
    text-transform: capitalize;
    font-weight normal
    font-size: 12px;
    line-height: 22px;
    background darkBlue
    text-align: left;
    padding-left: 7px;
  th
    &.explorerMove-games
      padding-left 15px
    &.explorerMove-result
      padding-left 15px
  tr
    transition: background-color 0.13s;
    &:nth-child(even)
      background: lighten(bgdark, 5%)
  td
    vertical-align middle
    padding-left: 7px;
    &.explorerMove-move
      font-size: 14px;
      line-height: 30px;
      padding-left: 7px;
    &.explorerMove-games
      font-size: 11px;
      text-align: right;
      padding-left 10px
    &.explorerMove-result
      width: 100%;
      padding-right: 7px;
      padding-left 15px
  .white
    background: #bbb;
    color: #222;
    box-shadow: 0 -5px 7px rgba(0,0,0,0.25) inset;
  .draws, .black
    color: #fff;
    box-shadow: 0 5px 7px rgba(255,255,255,0.2) inset;
  .draws
    background: #666;
    color: #ddd;
  .black
    background: #333;
    box-shadow: 0 5px 7px rgba(255,255,255,0.1) inset;
  .games
    font-size 0.8em
    width: 100%;
    td
      padding: 5px 0 5px 7px;
      max-width: 110px;
      span
        display: block;
        overflow: hidden;
        text-overflow: ellipsis;
    result
      display: block;
      text-align: center;
      padding: 3px 5px;
      border-radius: 3px;
      font-family: monospace;
      font-size: 0.9em;
  .toconf
    color #ccc
    position: absolute;
    top: 1px;
    right: 0;
    display: block;
    font-size: 20px;
    line-height: 20px;
    width 30px
    height 22px
    text-align: center;
    opacity: 0.7;
  .message
    text-align: center;
    font-size 0.9em
    font-style: italic;
    i
      font-size: 22px;
      display: inline-block;
      margin: 10px 0 0;
      opacity: 0.7;
    h3
      font-weight: bold;
    p
      white-space: normal;
      padding: 0 10px;
  &.loading
    .spinner_overlay
      visibility visible
    tbody, .message
      opacity: 0.4;

.explorer-data
  overflow-y auto
  -webkit-overflow-scrolling touch

.explorer-fixedTitle
  flex 0 0 23px
  font-size 12px
  line-height 22px
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  background darkBlue
  padding 0 7px
  padding-right 28px
  color #ccc

.explorerConfig
  font-size 0.75em
  section
    padding: 8px 10px 0 10px;
    &.db
      padding-top: 5px;
    &.save
      text-align: center;
      padding: 15px 0 10px 0;
    label
      font-weight: bold;
      display: block;
      line-height: 2em;
      max-width 300px
      margin 0 auto

.explorerBar
  text-align: center;
  display: inline-block;
  overflow: hidden;
  vertical-align: middle;
  border: 0px solid #555;
  border-width: 1px 0;
  box-sizing: border-box;
  height: 16px;
  line-height: 16px;
  font-size: 11px;
  &:first-child
    border-top-left-radius: 3px;
    border-bottom-left-radius: 3px;
    border-left-width: 1px;

  &:last-child
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
    border-right-width: 1px;

.explorerTablebase
  width: 100%;
  td:first-child
    font-family: 'ChessSansPiratf', sans-serif;
    font-size: 14px;
    line-height: 30px;
    padding-left: 7px;
  td:last-child
    padding-right: 7px;
    text-align: right;
  result
    padding: 3px 5px;
    margin-left: 5px;
    border-radius: 3px;
    font-size: 0.9em;

.analyse-evalSummary
  display flex
  flex-flow row nowrap
  justify-content space-around
  padding 10px
  font-size 0.9em
  > table
    width 48%
    > tbody
      font-size 0.9em
  th
    padding-right 1em
    text-align center
    > span:before
      margin 0

.analyse-requestComputer
  height 100%
  display flex
  justify-content center
  align-items center
  .fatButton
    width 80%

.analysisProgress
  text-align center
  padding 10px

.moves.displayPieces
  .explorerMove-move
    font-family ChessSansPiratf

.view-container.light
  move.active
    background darken(bglight, 10%)

  .analyse-openingBox
    background darken(bglight, 5%)

  .analyse_variant_selector
    background: themeBgLight
    text-shadow: 0 1px 0 #FFF;
    color: #848484;

  .analyse-cevalBox
    background darken(bglight, 7%)
  .analyse-curEval
    background darken(bglight, 9%)

  .explorer-fixedTitle
    background blue
    color #fff

  .explorerTable
    thead
      > tr
        background blue
    th, .title
      background blue
      color #fff
    tr
      &:nth-child(even)
        background #fafafa
    .white
      background: #fff;
      box-shadow: 0 -5px 7px rgba(0,0,0,0.1) inset;
    .draws
      background: #a0a0a0;
    .black
      background: #555;
      color: #ddd;
    .toconf
      color #fff

  .explorerBar
    border-color #ccc

  .explorerConfig
    span
      border-color #ccc
      &.selected
        background blue

.view-container.transp
  .analyse-replay
    background-color transpWhite01

  .analyse_variant_selector.select_input
    > label:after
      color rgba(#ddd, 0.7)
    background transparent

  eval
    color rgba(textTransp, 0.7)

  move.current
    color orangeDark
    > eval
      color rgba(orangeDark, 70%)

  .analyse-cevalBox, .analyse-infosBox
    background transpBlack3

  .analyse-curEval
    background transparent
    border-right 1px solid transpWhite01

  .analyse-engine_info
    padding-left 5px

  .analyse-openingBox
    background rgba(255,255,255,0.1)

  .analyse_actions_bar
    background transpBlack

  .explorerTable
    background rgba(0,0,0,0.2)
    tr
      background transpWhite01
      &:nth-child(even)
        background transpWhite015
    .black
      background lighten(#000, 10%)

  .explorer-fixedTitle, .explorerTable th, .explorerTable .title
    background rgba(0,0,0,0.4)

