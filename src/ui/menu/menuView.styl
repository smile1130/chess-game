.menu-backdrop
  height 100%
  width 100%
  z-index 99
  background rgb(0,0,0)
  opacity 0
  visibility hidden
  position absolute
  top 0
  left 0

#side_menu
  background #3f3f3f
  color #DFDFDF
  position absolute
  visibility hidden
  top 0
  bottom 0
  height 100%
  min-height 100%
  max-height 100%
  width 85%
  display flex
  flex-flow column nowrap
  @media only screen and (min-width 500px)
    width 50%
  @media only screen and (min-width 960px)
    width 35%
  overflow hidden
  z-index 100
  transform translate3d(-100%, 0,0)
  section
    padding 0 15px
  h3
    text-transform uppercase
    color #fff
    font-weight normal
    margin 40px 0px 30px 0

.signInButton
  width: 60%;
  padding: 0.8em 0.25em;
  margin: 15px auto
  border: 1px solid #505050
  background: #2e2e2e
  font-weight: bold;
  border-radius: 2px;

.side_menu_header
  flex 0 0 auto
  display flex
  flex-flow column nowrap
  justify-content center
  background #373737
  color darken(#fff, 8%)
  padding-top 15px
  min-height 65px
  > div:last-child
    padding-bottom 15px
  > .kiddo
    display flex
    justify-content center
    height 50px
    width 100%
    font-size 46px
    color gold
  > .username
    white-space nowrap
    width 100%
    line-height 45px
    font-size 1.5rem
    display flex
    width 100%
    justify-content flex-start
    padding-left 15px

.side_menu_scroller
  flex 0 1 auto

.menu-toggleButton
  background #373737
  text-align left
  padding-left 15px
  line-height 40px
  &.side_link:last-child
    margin 0
  &.active
    background lighten(#373737, 3%)

.pingServer
  margin-left 15px
  display flex
  align-items center
  color darken(#fff, 40%)
  font-size 0.75em
  > signal
    margin-right 1em
  .pingKey
    display inline-block
    width 45px
  .pingValue
    font-family Cousine

.side_links
  > .hr
    margin 10px 0
    border-bottom 1px solid #4c4c4c

.side_link
  color #bbb
  padding 15px 0 15px 15px
  font-weight bold
  line-height 19px
  > span
    color darken(textLightGray, 15%)
    width 17px
    font-size 19px
    margin-right 15px
  > .menu_icon_game
    &::before
      content ''
      display inline-block
      width 18px
      height 18px
      background url('../../images/icons/game_icon_menu.svg') no-repeat
  &:last-child
    margin-bottom 10px
  &.active
    background lighten(#3f3f3f, 3%)

.sep_link
  color #8a8a8a
  padding 15px 15px 10px

.view-container.transp
  #side_menu
    background #111

  .side_menu_header
    background #000

  .menu-toggleButton
    background #1b1b1b
    &.side_link.active
      background lighten(#1b1b1b, 8%)

  .side_link
    &.active
      background lighten(#111, 5%)

