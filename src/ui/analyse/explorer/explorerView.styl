explorerHeaderBg = lighten(bgdark, 1%)

.explorerTable
  background bgdark
  height 100%
  width 100%
  position relative
  overflow-x: hidden;
  white-space: nowrap;
  display flex
  flex-flow column nowrap
  > div
    width 100%
  .empty
    text-align: center;
  .spinner_overlay
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display flex
    align-items center
    justify-content center
    visibility hidden
    > .spinner
      margin 22px 0 0
      width initial
      height initial
      font-size 25px
  tbody, > .message
    transition: opacity 0.13s;
  th, .title
    color #ccc
    text-transform: capitalize;
    font-weight normal
    font-size: 12px;
    line-height: 22px;
    background darkBlue
    text-align: left;
    padding-left: 7px;
  th
    &.explorerMove-games
      padding-left 15px
    &.explorerMove-result
      padding-left 15px
  tr
    transition: background-color 0.13s;
    &:nth-child(even)
      background: lighten(bgdark, 5%)
  td
    vertical-align middle
    padding-left: 7px;
    &.explorerMove-move
      font-size: 14px;
      line-height: 30px;
      padding-left: 7px;
    &.explorerMove-games
      font-size: 11px;
      text-align: right;
      padding-left 10px
    &.explorerMove-result
      width: 100%;
      padding-right: 7px;
      padding-left 15px
  .white
    background: #bbb;
    color: #222;
    box-shadow: 0 -5px 7px rgba(0,0,0,0.25) inset;
  .draws, .black
    color: #fff;
    box-shadow: 0 5px 7px rgba(255,255,255,0.2) inset;
  .draws
    background: #666;
    color: #ddd;
  .black
    background: #333;
    box-shadow: 0 5px 7px rgba(255,255,255,0.1) inset;
  .games
    font-size 0.8em
    width: 100%;
    td
      padding: 5px 0 5px 7px;
      max-width: 110px;
      span
        display: block;
        overflow: hidden;
        text-overflow: ellipsis;
    result
      display: block;
      text-align: center;
      padding: 3px 5px;
      border-radius: 3px;
      font-family: monospace;
      font-size: 0.9em;
  .toconf
    color #ccc
    position: absolute;
    top: 1px;
    right: 0;
    display: block;
    font-size: 16px
    width 30px
    height 22px
    text-align: center;
    opacity: 0.7;
  .message
    text-align: center;
    font-size 0.9em
    font-style: italic;
    i
      font-size: 22px;
      display: inline-block;
      margin: 10px 0 0;
      opacity: 0.7;
    h3
      font-weight: bold;
    p
      white-space: normal;
      padding: 0 10px;
  &.loading
    .spinner_overlay
      visibility visible
    tbody, .message
      opacity: 0.4;

.explorer-data
  overflow-y auto
  -webkit-overflow-scrolling touch

.explorer-fixedTitle
  flex 0 0 23px
  font-size 12px
  line-height 23px
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  background explorerHeaderBg
  padding 0 7px
  padding-right 28px
  color #ccc

.explorerConfig
  font-size 0.75em
  section
    padding: 8px 10px 0 10px;
    &.db
      padding-top: 5px;
    &.save
      text-align: center;
      padding: 15px 0 10px 0;
    label
      font-weight: bold;
      display: block;
      line-height: 2em;
      max-width 300px
      margin 0 auto

.explorerBar
  text-align: center;
  display: inline-block;
  overflow: hidden;
  vertical-align: middle;
  border: 0px solid #555;
  border-width: 1px 0;
  box-sizing: border-box;
  height: 16px;
  line-height: 16px;
  font-size: 11px;
  &:first-child
    border-top-left-radius: 3px;
    border-bottom-left-radius: 3px;
    border-left-width: 1px;

  &:last-child
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
    border-right-width: 1px;

.explorerTablebase
  width: 100%;
  td:first-child
    font-family: 'ChessSansPiratf', sans-serif;
    font-size: 14px;
    line-height: 30px;
    padding-left: 7px;
  td:last-child
    padding-right: 7px;
    text-align: right;
  result
    padding: 3px 5px;
    margin-left: 5px;
    border-radius: 3px;
    font-size: 0.9em;

.moves.displayPieces
  .explorerMove-move
    font-family ChessSansPiratf


// themes

.view-container.light
  .explorerTable
    thead
      > tr
        background blue
    th, .title
      background blue
      color #fff
    tr
      &:nth-child(even)
        background #fafafa
    .white
      background: #fff;
      box-shadow: 0 -5px 7px rgba(0,0,0,0.1) inset;
    .draws
      background: #a0a0a0;
    .black
      background: #555;
      color: #ddd;
    .toconf
      color #fff

  .explorerBar
    border-color #ccc

  .explorerConfig
    span
      border-color #ccc
      &.selected
        background blue

.view-container.transp
  .explorerTable
    background rgba(0,0,0,0.2)
    tr
      background transpWhite01
      &:nth-child(even)
        background transpWhite015
    .black
      background lighten(#000, 10%)

  .explorer-fixedTitle, .explorerTable th, .explorerTable .title
    background rgba(0,0,0,0.4)
