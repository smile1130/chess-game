.ceval-Wrapper
  width 100%
  height 100%
  display flex
  flex-flow column nowrap
  strong
    color lighten(textDarkBg, 10%)

.ceval-infos
  flex 0 0 auto
  padding 10px
  display: flex;
  flex-flow: row nowrap;
  align-items center
  font-size 0.9em
  > div
    margin-right 0.5em

.ceval-notEnabled
  display flex
  justify-content center
  align-items center

.ceval-curEval
  flex 0 0 auto
  min-width 45px
  font-weight bold
  height 25px
  line-height 25px
  text-align center
  background darken(headerBgDark, 15%)
  > .spinner
    width initial
    height initial
    font-size 16px
    padding 0
    margin 0
    text-align center
  @media only screen and (orientation: landscape) and (max-height 450px)
    min-width 50px
    font-size 16px
    > .spinner
      font-size 14px

.ceval-pv_box
  font-size 0.9em
  padding 0 10px
  overflow-y auto
  &.loading
    display flex
    justify-content center
    align-items center
    > .spinner
      font-size 2em

.ceval-pv
  display flex
  flex-flow row nowrap
  padding 0.5em 0
  &.active
    opacity 0.9

.ceval-pv_eval
  flex 0 0 33px
  margin-right 0.5em
