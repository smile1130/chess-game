#studyMenu
  background white
  color textDarkGray
  position absolute
  visibility hidden
  right 0
  top 0
  bottom 0
  height 100%
  min-height 100%
  max-height 100%
  width 85%
  display flex
  flex-flow column nowrap
  @media only screen and (min-width 500px)
    width 50%
  @media only screen and (min-width 960px)
    width 35%
  overflow hidden
  z-index 100
  box-shadow: -2px 0px 3px rgba(0, 0, 0, 0.3)
  transform translate3d(100%, 0,0)
  section
    padding 0 15px
  h3
    text-transform uppercase
    color #fff
    font-weight normal
    margin 40px 0px 30px 0

.study-menu-title
  display flex
  justify-content space-between
  font-size 1.1em
  text-transform uppercase
  color blue
  font-weight bold
  padding 10px 1em

.study-menu-link
  padding 12px 1em
  word-wrap break-word
  display flex
  flex-flow row nowrap
  &.viewer
    color rgba(textDarkGray, 0.85)
  &.current
    background palerBlue
  &.active
    background veryPaleBlue
  > .bullet
    margin-right 1em
    color blue
    font-weight bold
    text-align center
    flex 0 0 16px
    &.fa
      margin-top 3px
      &.fa-eye
        color rgba(blue, 0.6)

.study-tags
  width 100%

.study-tag
  > th
    padding 10px
    text-transform uppercase
    font-weight normal
    color rgba(textDarkBg, 0.8)
    width 1px
  > th, td
    text-align left
  &:nth-child(even)
    background-color lighten(bgdark, 10%)


.view-container.light
  .study-tag
    > th
      color rgba(textLightBg, 0.8)
    &:nth-child(even)
      background-color darken(#fff, 3%)


.view-container.transp
  .study-tag
    &:nth-child(even)
      background-color transpWhite01
