{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2015",
    "suppressImplicitAnyIndexErrors": false,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "strictFunctionTypes": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "jsxFactory": "h",
    "types": ["lodash-es", "mithril", "d3", "hammerjs"]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "plugins",
    "platforms",
    "scripts",
    "src/**/__tests__/*"
  ]
}
