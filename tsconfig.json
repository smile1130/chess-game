{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2015",
    "module": "commonjs",
    "suppressImplicitAnyIndexErrors": false,
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "jsx": "preserve"
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "plugins",
    "platforms",
    "scripts",
    "src/**/__tests__/*"
  ]
}
