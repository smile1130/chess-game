{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*"]
    },
    "target": "es2017",
    "suppressImplicitAnyIndexErrors": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "jsxFactory": "h",
    "types": ["lodash-es", "d3"]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "plugins",
    "platforms",
    "scripts",
    "src/**/__tests__/*"
  ]
}
